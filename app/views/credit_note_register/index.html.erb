<section id="content">
    <section class="main padder">

  <div class="row">
    <div class="col-lg-7">
        <h2><i class="icon-bar-chart text"></i>Credit Note Register</h2>
    </div>
       <div class="col-lg-5 m-t-large" align="right">
    <a href="#" class="btn btn-white btn-lg " id="use_filter" title="Filter"><i class="icon-filter"></i></a>
    <% if !@ledgers.blank? %>
    <%= link_to_pdf params %>
    <%= link_to_xls params %>
     <%end%>
    <p></p>
    </div>
  </div>

    <div class="row">
    <!-- Table starts -->
          <div class="col-lg-12">
          <section class="panel">
          <div class="panel-body">
              <%= render :partial => "shared/filter" %>

            <% if @ledgers.blank? || @accounts.blank? %>
          <br />
          <%= render :partial => "shared/no_record" %>
              <% else %>
                    <%= render :partial => "shared/report_header" %><br />
            <div class="table-responsive row">
              <table class="table table-striped b-t text-small">
                <thead>
                  <tr>
                      <th width ="9%">Date</th>
                      <th width ="18%">Correspondence Account</th>
                      <th width ="24%"><span class='char_spacing'>Particulars</span></th>
                      <th width ="9%">Type</th>
                      <th class="text-right" width ="20%">Debit</th>
                      <th class="text-right" width ="20%">Credit</th>
                  </tr>
                </thead>
                <tbody>
                      <%debit = 0
                      credit = 0
                      prev_date = nil
                      for ledger in @ledgers
                       %>
                    <tr>
                      <% if !ledger.retrieve_corresponding_account.nil? %>
                      <td width ="9%"><%=ledger.transaction_date.strftime("%d-%m-%Y") %></td>
                         <%cur_acc = Account.find(ledger.retrieve_corresponding_account)
                         %>
                     <td title = '<%= cur_acc.name %>' width ="18%"><%= (ledger.debit > 0)? "To":"By"%>
                      <%= ledger.multiple_correlate_ledgers? ? "Multiple accounts" : (link_to cur_acc.name, "/account_books_and_registers/ledger?account_id=#{cur_acc.id}")%>
                      </td>
                     <td title = '<%= ledger.description %>'width ="24%"><%= ledger.description %></td>
                     <td title = '<%= ledger.voucher_type %>'width ="9%"><%= ledger.voucher_type %></td>
                     <td align="right" width ="20%"><%= format_currency(ledger.debit) %></td>
                     <td align="right" width ="20%"><%= format_currency ledger.credit %></td>
                        <%debit += ledger.debit
                          credit += ledger.credit
                        end %>

                   </tr>

                   <% end
                   closing_balance = debit - credit%>
                   <tr><td width ="9%"></td><td width ="18%"></td><td width ="24%"></td><td width ="9%"></td><td width ="20%" class = 'border_up' align="right"><b><%= format_currency debit%></b></td><td width ="20%" class = 'border_up' align="right"><b><%= format_currency(credit) %></b></td></tr>
                      <% if closing_balance < 0 %>
                        <tr><td width ="9%"></td><td width ="18%"></td><td width ="24%"><b>Closing Balance</b></td><td width ="9%"></td><td width ="20%" class = 'border_down' align = "right"><b><%= format_currency(-1*closing_balance) %></b></td><td width ="20%" class = 'border_down' align="right"></td></tr>
                          <tr><td width ="9%"></td><td width ="18%"></td><td width ="24%"></td><td width ="9%"></td><td width ="20%" class = 'border_up border_down' align="right"><b><%= format_currency (debit + -1*closing_balance)%></b></td><td width ="20%" class = 'border_up border_down' align="right"><b><%= format_currency(credit )%></b></td></tr>
                      <% else %>
                        <tr><td width ="9%"></td><td width ="18%"></td><td width ="24%"><b>Closing Balance</b></td><td width ="9%"></td><td width ="20%" class = 'border_down'></td><td width ="20%" class = 'border_down' align="right"><b><%= format_currency(closing_balance) %></b></td></tr>
                          <tr><td width ="9%"></td><td width ="18%"></td><td width ="24%"></td><td width ="9%"></td><td width ="20%" class = 'border_up border_down' align="right"><b><%= format_currency debit%></b></td><td width ="20%" class = 'border_up border_down' align="right"><b><%= format_currency(credit + closing_balance)%></b></td></tr>
                        <% end %>
                </tbody>
              </table>
            </div>
            <footer class="row">
      <%= render "shared/report_footer"%>
            </footer>
            </div>
          </section>
      <!-- Table ends -->
          <%end%>
        </div>

   </section>
  </section>