<%= form_for(@ledger) do |f| %>
  <%= render 'shared/form_error', :object => @ledger %>
  <div class="field">
    <%= f.label :account_id %><br />
    <%= f.text_field :account_id,:autofocus =>"autofocus" %>
  </div>
  <div class="field">
    <%= f.label :transaction_date %><br />
    <%= f.date_select :transaction_date %>
  </div>
  <div class="field">
    <%= f.label :debit %><br />
    <%= f.text_field :debit %>
  </div>
  <div class="field">
    <%= f.label :credit %><br />
    <%= f.text_field :credit %>
  </div>
  <div class="field">
    <%= f.label :voucher_number %><br />
    <%= f.text_field :voucher_number %>
  </div>
  <div class="field">
    <%= f.label :voucher_type %><br />
    <%= f.text_field :voucher_type %>
  </div>
  <div class="field">
    <%= f.label :created_by %><br />
    <%= f.text_field :created_by %>
  </div>
  <div class="field">
    <%= f.label :deleted %><br />
    <%= f.check_box :deleted %>
  </div>
  <div class="field">
    <%= f.label :deleted_by %><br />
    <%= f.text_field :deleted_by %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
     <button type="submit" class="btn btn-green big"> Save</button>&nbsp;
     <button type="reset" class="btn  btn-gray big">Cancel</button>&nbsp;
  </div>
<% end %>
