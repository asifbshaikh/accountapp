<!-- Page title -->
<%= render "shared/page_title"%> <!-- End of Page title -->
<!-- Page content -->
<div id="page">
<!-- Wrapper -->
  <div class="wrapper">
 <!-- Left column/section -->
    <section class="column width6 first"  ></br>
      <div class="highlight">
      <%= render :partial => "shared/flash_msg"%>
      <table class="display stylized" id="act_details">
	 <thead>
	    <tr><th colspan="2">Holiday Details</th></tr>
         </thead>
	 <tbody>
	     <tr>
	       <td>
                 <label>Holiday Date:</label>
		 <%= @holiday.holiday_date.strftime("%d-%m-%Y") %>
               </td>
	     </tr>
	    <tr>
	      <td>
                <label>Holiday:</label>
		<%= @holiday.holiday %>
              </td>
	   </tr>
	   <tr>
	     <td>
              <label>Description:</label>
	      <%= breaking_word_wrap(@holiday.description) %>
             </td>
	   </tr>
	</tbody>
	<tfoot>
	  <tr>
	    <td colspan="2">	
	     <%= link_to 'Edit', edit_holiday_path(@holiday),{:class=>"btn btn-green" } %> 
        <a rel="nofollow" data-method="delete" data-confirm="Are you sure?" href= "" class="btn" >Delete</a>
       <a href="/holidays/holiday_list" class="btn btn-cancel">Back</a>
	   </td>
	 </tr>
       </tfoot>
     </table>
  </div><br />
 </section>
			<!-- End of Left column/section -->
		
 <aside class="column width2"><br />
 	<%= new_button "Create New Holiday", new_holiday_path %>
 	<p><%= list_button_black "View Holidays", holidays_path %></p>
   </p>
 </aside>
		<!-- End of Right column/section -->
  </div>
	<!-- End of Wrapper -->
</div>
<!-- End of Page content -->
