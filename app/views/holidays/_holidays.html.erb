<% @holidays.each do |holiday| %>
<tr>
  <td>
    <%= best_in_place holiday, :holiday_date, :path => "/holidays/#{holiday.id}", :nil=> '<span class ="variable_item">Click here to add content</span> ', :html_attrs => {:maxlength => 50, :class=>"bg-focus form-control"} %>
  </td>
  <td>
    <%= best_in_place holiday, :holiday, :path => "/holidays/#{holiday.id}",:html_attrs=>{:maxlength=>40,:class=>"bg-focus  form-control"} %>     
  </td>
  <td class="text-center">
    <a rel="nofollow" data-method="delete" data-confirm="Are you sure?" href= "/holidays/<%= holiday.id%>"  title="Delete" ><i class="icon-trash"></i></a>     
  </td>
</tr>
<% end %>