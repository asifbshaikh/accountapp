<tr>
    <td><%= link_to holiday.holiday_date.strftime("%d-%m-%Y"), holiday, :onclick => 'Modalbox.show( this.href , {title: "Profit Next", width:400}); return false;' %></td>
    <td><%= holiday.holiday %></td>
    <td><%= truncate(holiday.description, :length => 20) %></td>
    <td>
      <div class="btn-group" style="float: right;">
      <button class="btn btn-gray" onclick="location.href='/holidays/<%= holiday.id %>'"; >View</button>
      <button class="btn btn-gray dropdown-toggle" data-toggle="dropdown"><span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li><a href= <%= edit_holiday_path(holiday) %>>Edit</a></li>  
        <li class="divider"></li>
        <li><a rel="nofollow" data-method="delete" data-confirm="Are you sure?" href= "/holidays/<%= holiday.id%>" >Delete</a></li>
      </ul>
    </div>
    </td>
  </tr>