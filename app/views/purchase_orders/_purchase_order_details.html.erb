<tr class="gradeB">
  <td ><%= link_to purchase_order_details.purchase_order_number, purchase_order_details %></td>
  <td><%= truncate(Account.find(purchase_order_details.account_id).name, :length =>20)%></td>
  <td><%= purchase_order_details.record_date.strftime("%d-%m-%Y") %></td>
  <td ><%= purchase_order_details.amount %></td>
  <td ><%= User.find(purchase_order_details.created_by).username%></td>
  <td>
    <div class="btn-group" style="float: right;">
      <button class="btn btn-white" onclick="location.href='/purchase_orders/<%= purchase_order_details.id %>'"; >View</button>
      <button class="btn btn-white dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu pull-right">
        <li><a href="<%= edit_purchase_order_path(purchase_order_details) %>">Edit</a></li>
        <li><a href="<%= purchase_order_path(purchase_order_details, :format => "pdf") %>"   target = "_blank">Export to PDF</a></li>
        
         <li class="divider"></li>
        <li><a rel="nofollow" data-method="delete" data-confirm="Are you sure?" href= "/purchase_orders/<%= purchase_order_details.id%>" >Delete</a></li>
      </ul>
    </div>
  </td>
</tr>

