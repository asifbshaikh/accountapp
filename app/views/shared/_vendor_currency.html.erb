<script>
  $(document).ready(function(){
    var custcur = new Object();
  '<% @from_accounts.each do |acc|%>'
   '<% unless acc.blank? %>'
   console.log("<%= acc.get_currency%>")
    custcur['<%= acc.name %>']='<%= acc.get_currency %>'
    '<% end %>'
  '<% end %>'

    $('#from_account_auto_complete').focusout(function(){
      var name = $(this).attr('value');
      cur = custcur[name]
      
      if (cur){
        $('span#from_acc_cur').html("<span style='color:grey;'>Currency : </span>"+cur);
         $('span#taccur').html(cur);
         $('span.comcur').hide();
        $('.exc_rate').show();
      }else{
        $('span#taccur').html("<%= @company.currency_code %>");
        $('.exc_rate').hide();
        $('span.comcur').hide();
        $('span#from_acc_cur').html("<span style='color:grey;'> </span>");
      }

    });

  });
</script>
