<section id="content">
  <div class="main padder">
    <div class="row">
      <div class="col-lg-4 col-lg-offset-4 m-t-large"><br>
        <p align="center"><%= image_tag 'logo.png', :alt => 'Profitbooks logo', :disposition => 'inline' %></p>
          <section class="main bg-white">     
            <ul class="nav nav-tabs m-b-none">
              <li class="active"><a href="#login" data-toggle="tab">User Login</a></li>
              <li><a href="#auditor" data-toggle="tab">Advisor Login</a></li>
            </ul>
     
            <div class="tab-content">
              <div class="tab-pane active" id="login">
                <section class="panel">
                  <form method="post" action="/login/authenticate" accept-charset="UTF-8"  class="form-horizontal panel-body"> 
                    <%= render :partial=>"shared/flash_msg"%>
                    <div class="block">
                      <label class="control-label"> Username </label>
                      <input type="text" name="username" class="bg-focus form-control" id="username" value=""  placeholder="username"/> 
                    </div>
                    <div class="block">
                      <label class="control-label">Password</label>
                      <input type="password" name="password" id="password" placeholder="Password" class="bg-focus form-control" value="">
                    </div>
                    <a href="/login/forgot_pass" class="pull-right m-t-mini"><small>Forgot password?</small></a>
                    <span class="loading" style="display: none;">Please wait..</span>
                    <input type="submit" name="submit" class="btn btn-success" id="buttonsend" value="Secure Sign in" />
                      <div class="line line-dashed"></div>
                      <p class="text-muted text-center"><small>Do not have an account?</small></p>
                      <a href="https://profitbookshq.com/signup/new?plan=Trial" class="btn btn-white btn-block">Create an account</a>
                  </form>
                </section>
              </div>
            <div class="tab-pane" id="auditor">
              <section class="panel">
                <div class="panel-body">
                  <form method="post" action="/auditor_login/authenticate" accept-charset="UTF-8"  
                    class="form-horizontal panel-body">
                    <%= render "shared/flash_msg"%>     
                    <div class="block">
                      <%= label_tag 'user_name','Username',:class=>"control-label-required" %>
                      <%= text_field_tag 'username',nil, :autofocus => "autofocus", :class =>'form-control', :placeholder => "test@example.com"%>
                    </div>
                    <div class="block">
                      <%= label_tag 'password','Password',:class=>'control-label-required'%>
                      <%= password_field_tag 'password',nil, :class=>'form-control', :placeholder=>"password"%>
                    </div>
                    <a href="/auditor_login/forgot_pass" class="pull-right m-t-mini"><small>Forgot password?</small></a>
                    <span class="loading" style="display: none;">Please wait..</span>
                    <input type="submit" name="submit" class="btn btn-success" id="buttonsend" value="Secure Sign in" />
                  </form>
                </div>
              </section>
            </div>
          </div>
        </section>            
      </div>
    </div>
  </div>
</section>
  