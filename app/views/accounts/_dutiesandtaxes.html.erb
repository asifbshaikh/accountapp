  <div class="form-group gradeU even">
	  <div class="col-lg-2 text-right"><label class="control-label">Tax Type</label></div>
    <div class="col-lg-3">
      <%= select_tag 'duties[tax]', options_for_select([['Excise'],['Service Tax'],['VAT'],['TDS'],['Others']]), :class=>"bg-focus form-control" %> 
    </div>
  </div>
  <div class="form-group gradeU even">
    <div class="col-lg-2 text-right"><label class="control-label-required">Tax Rate</label></div>
    <div class="col-lg-3"><%= text_field_tag 'duties[tax_rate]','', :onkeydown => "return numbersOnly(event);", :maxlength => 5, :class=>"bg-focus form-control" %></div>
  </div>
  <div class="form-group gradeU even">
	 <div class="col-lg-2 text-right"><label class="control-label">Auto calculate tax </label></div>
	 <div class="col-lg-3">
      <%=radio_button_tag 'duties[auto_calculate_tax]', '1',true,{ :tabindex=>'4'}  %>Yes &nbsp;
     	<%=radio_button_tag 'duties[auto_calculate_tax]', '0', false,{ :tabindex=>'5'} %> No
    </div>
  </div>

