<%= f.fields_for :accountable do |a| %>
  <div class="form-group">
    <div class="col-lg-4">
      <%= a.label 'Loan account number', :class=>'control-label'%>
      <div class="input-group">
        <%= a.text_field :account_number, :class => 'form-control' %>
      </div>
    </div>
    <div class="col-lg-4">
      <%= a.label :bank_name, :class=>'control-label'%>
      <div class="input-group">
        <%= a.text_field :bank_name, :class => 'form-control'  %>
      </div>
    </div>
    <div class="col-lg-4">
      <%= a.label :loan_type,  :class=>"control-label-required"%>
      <div class="input-group">
        <%= a.text_field :loan_type, :class => 'form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-8">
      <%= a.label :interest_rate, :class=>'control-label'%>
      <div class="input-group">
        <%= a.text_field :interest_rate, :class => 'form-control' %>
      </div>
    </div>
    <div class="col-lg-8">
      <%= a.label :details, :class=>'control-label'%>
      <div class="input-group">
        <%= a.text_field :details, :class => 'form-control' %>
      </div>
    </div>
  </div>

  <%= a.fields_for :address do |d| %>
    <div class="form-group">
      <div class="col-lg-4">
        <label class="control-label">Address line 1</label>
        <div class="input-group">
          <%= d.text_field :address_line1, :class => 'form-control' %>
        </div>
      </div>
      <div class="col-lg-4">
        <label class="control-label">Address line 2</label>
        <div class="input-group">
          <%= d.text_field :address_line2, :class => 'form-control' %>
        </div>
      </div>
      <div class="col-lg-4">
        <%= d.label :city,  :class=>"control-label-required"%>
        <div class="input-group">
          <%= d.text_field :city, :class => 'form-control' %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-4">
        <label class="control-label">State</label>
        <div class="input-group">
          <%= d.text_field :state, :class => 'form-control' %>
        </div>
      </div>
      <div class="col-lg-4">
        <label class="control-label">Pin code</label>
        <div class="input-group">
          <%= d.text_field :postal_code, :onkeydown => "return numbersOnly(event);", :class => 'form-control' %>
        </div>
      </div>
    </div>
  <% end %>  
<% end %>

