<div class="form-group gradeU even">
 <div class="col-lg-2 text-right"><label class="control-label">Name</label></div>
 <div class="col-lg-3"><%= text_field_tag 'capital[name]','',:size => 3, :class=>"bg-focus form-control" %></div>
</div>
<div class="form-group gradeU even">
  <div class="col-lg-2 text-right"><label class="control-label">E-mail</label></div>
  <div class="col-lg-3"><%= text_field_tag 'capital[email]','',:size => 3, :class=>"bg-focus form-control" %></div>
</div>
<div class="form-group gradeU odd">
  <div class="col-lg-2 text-right"><label class="control-label">Address Line 1</label></div>
  <div class="col-lg-3"><%= text_field_tag 'capital[address_attributes][address_line1]','',:size => 3, :class=>"bg-focus form-control" %></div>
</div>
<div class="form-group gradeU odd">
  <div class="col-lg-2 text-right"><label class="control-label">Address Line 2</label></div>
  <div class="col-lg-3"><%= text_field_tag 'capital[address_attributes][address_line2]','',:size => 3, :class=>"bg-focus form-control" %></div>
</div>
<div class="form-group gradeU odd">
  <div class="col-lg-2 text-right"><label class="control-label">City</label></div>
  <div class="col-lg-3"><%= text_field_tag 'capital[address_attributes][city]','',:size => 3, :class=>"bg-focus form-control" %></div>
</div>
<div class="form-group gradeU odd">
  <div class="col-lg-2  text-right"><label class="control-label">State</label></div>
  <div class="col-lg-3"><%= text_field_tag 'capital[address_attributes][state]','',:size => 3, :class=>"bg-focus form-control" %></div>
</div>
<div class="form-group gradeU odd">
  <div class="col-lg-2 text-right"><label class="control-label">Pin code</label></div>
  <div class="col-lg-3"><%= text_field_tag 'capital[address_attributes][postal_code]','', :maxlength => "6", :onkeydown => "return numbersOnly(event);", :size => "30", :class=>"bg-focus form-control" %></div>
</div>

