<!-- Page title -->
<div id="pagetitle">
  <div class="wrapper">
    <h1>Accounts &rarr; <span>Chart of Accounts</span></h1>
  </div>
</div>
<!-- End of Page title -->
<!-- Page content -->
<div id="page">
  <!-- Wrapper -->
  <div class="wrapper">
    <!-- Left column/section -->
    <section class="column width6 first"><br/>
      <div class="highlight">
        <%= render :partial => "shared/flash_msg",:locals => {:obj => @account} %>
        <div id="tab2">
          <ul id="tabnav">
            <li class="tab1">
              <a href="/accounts">All</a>
            </li>
            <li class="tab2">
              <a href="/accounts/bank_accounts">Bank accounts</a>
            </li>
            <li class="tab3">
              <a href="/accounts/customer_accounts"><%= @company.label.customer_label %>s</a>
            </li>
            <li class="tab4">
              <a href="/accounts/vendor_accounts">Vendors</a>
            </li>
          </ul>
        </div>
        <div id="task_container">
         <div id="tabs-all">
         <% if @accounts.blank? %>
           <%= render "shared/no_record"%>
         <% else %> 
	 <div id = 'abc'>
           <table class="display stylized" id="user_table">
              <thead>
		 <%= render :partial => 'header' %>
	      </thead>
	      <tbody>
          <%= render :partial => :account, :collection => @accounts %>	
	      </tbody>
  	      <tfoot>
		<%= render :partial =>"footer"%>
	      </tfoot>
	    </table>
           <%= paginate @accounts %>  
	 </div>
	 <% end %>
	 <div class="clear">&nbsp;</div>
  	<div class="colgroup"></div>
        </div>
       </div>
       </div><br />
    </section>
    <!-- Right column/section -->
    <aside class="column width2"><br />
      <%= new_button 'New account', new_account_path %>
      <p>
        <%= list_button_black 'Account heads', account_heads_path %>
      </p>
      <div id="rightmenu">
  	<dl class="first">
  	   <dt><%= image_tag 'help.png', :width=>'16', :height=>'16', :alt=>'Help' %></dt>
	   <dd><a href="#">Help</a></dd>
	   <dd class="last">This page shows the list of all the accounts. <br/>
             Click on account name to view more details.<br/><br/>   
           </dd>							
	 </dl>
      </div><br />
    </aside>
    <!-- End of Right column/section -->
   </div>
	<!-- End of Wrapper -->
</div>
