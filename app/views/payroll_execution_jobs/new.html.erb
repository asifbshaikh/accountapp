<section id="content">
  <section class="main padder">
    <div class="row">
       <div class="col-lg-3">
        <h2><i class="icon-group text"></i> Manage Payroll</h2>
        </div>
      <div class="col-lg-9 m-t-large" align="right">       
      <a href="/users/manage_payroll" class="btn btn-white btn-lg"><i class="icon-reply"> </i> Go back</a>       
      <!-- <a href="#" class="btn btn-default btn-lg"><i class="icon-info"> </i> </a> -->
      <p></p>
    </div>  
    </div>
    <%= render :partial=>"attendances/acc_auto_complete" %>
    <div class="row">
      <div class="col-lg-12">
        <section class="panel">
          <div class="panel-body">
            <h4>Running payroll for <%= Attendance.get_month(params[:month])%> <%= (params[:month].to_i>Time.zone.now.month) ? (Time.zone.now.year-1) : Time.zone.now.year %></h4>
            <div class="wizard clearfix">
              <ul class="steps">
                <li data-target="#step1" ><span class="badge">1</span>Enter Attendance & Variable Pay</li>
                <li data-target="#step2" class="active"><span class="badge  badge-info">2</span>Review Information</li>
                <li data-target="#step3"><span class="badge">3</span>Result</li>
              </ul>
            </div>
            <p></p>
            <%= render :partial => "shared/flash_msg"%>
            <%= render 'form' %>
          </div>
        </section>
      </div>
    </div>
  </section>
</section>
