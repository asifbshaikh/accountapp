$("#row<%= params[:index]%> #unit_cost").val("");
<% unless @product.blank? %>
$("#row<%= params[:index]%> #description").val("<%= @product.description.gsub(/[\r\n]+/, '\n').gsub(/\"/, '\\\"').html_safe unless @product.description.blank? %>");
$("#row<%= params[:index]%> #unit_cost").val(<%= @product.sales_price %>);
cal();
<% end %>