<%= form_for @account_head, :html=>{:class=>"form-horizontal"} do |f| %>
	<%= render 'shared/form_error' , :object => @account_head %>
<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <div class="panel-body">
      <div class="form-group">
        <div class="col-lg-2 text-right"><%= f.label :name , :class=>"control-label-required"%></div>
        <div class="col-lg-3"><%= f.text_field :name, :class=>"bg-focus form-control" %></div>
      </div>
      <div class="form-group">
        <div class="col-lg-2 text-right"><%= f.label "Parent account group", :class=>"control-label-required" %></div>
        <div class="col-lg-3">
          <% if @account_head.new_record? %>
          <%= f.collection_select(:parent_id, @account_heads, :id, :name, {:include_blank => false}, :class=>"bg-focus form-control") %>
          <% else %>
           <%= @account_head.parent_name %>
           <%= hidden_field_tag "parent_id", @account_head.parent_id %>
          <% end %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-2 text-right"><%= f.label 'Description' %></div>
        <div class="col-lg-3">
         <%= f.text_area :desc,:rows=>3, :class => 'bg-focus form-control' %>
        </div>
      </div>
          <div class="form-group">
          <div class="col-lg-9 col-lg-offset-3">                      
            <button type="submit" class="btn btn-success">Save</button>
            <%= link_to 'Cancel', account_heads_path, :class => "btn btn-default" %>
          </div>
      </div>

    
  </div>
    </section>
  </div>
</div>

<% end %>
