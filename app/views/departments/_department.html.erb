
<tr>
  <td><%= link_to department.name, department %></td>
  <td><%= truncate(department.description, :length=>20) %></td>
  <td><%= department.status %></td>
  <td>
   
   <div class="btn-group" style="float: right;">
      <button class="btn btn-gray" onclick="location.href='/departments/<%= department.id %>'"; >View</button>
      <button class="btn btn-gray dropdown-toggle" data-toggle="dropdown"><span class="caret"></span>
      </button>
