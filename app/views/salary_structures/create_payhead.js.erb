$('body').append("<div id='msg_box'><div class='box box-success'>Payhead created successfully</div></div>");

<% if @is_save %>
  $("#<%= params[:payhead]%>").val('<%= @payhead.payhead_name %>');
  $('#popup_box').fadeOut("slow");
  $('#msg_box').fadeIn("slow", function(){
    $('#msg_box').fadeOut(7000);
  });
  
<% else %>
  <% if @payhead.errors[:payhead_name].any? %>
    var error = "<%= @payhead.errors[:payhead_name] %>";
    $("span#name").text(error);
    $("#name").css("border-color",'#f55');
  <% end %>
  
<% end %>

$("#name").keyup(function(){
  if($("span#name").text()){
    $("span#name").text('');
    $("#name").css("border-color", "");
  }
});



