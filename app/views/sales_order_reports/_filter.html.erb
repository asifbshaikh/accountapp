<div class="panel panel-info data-filter" id="filter">
  <div class="panel-heading"><h4 class="panel-title" > Filter</h4></div>
  <form action = '' class="form-horizontal" method="get">
    <div class="row">
      <div class="form-group"><br/>
      <div class="col-lg-1"></div>
      <% if @company.plan.enterprise_plan? && @current_user.owner?%> 
        <div class="col-lg-2">                  
         <%= select_tag('branch_id', options_from_collection_for_select(@company.branches, :id, :name, params[:branch_id]), {:prompt => 'Select branch', :style => "width:150px;"}) %>
        </div>
      <% end %>
      <% unless @customers.blank? %>
       <div class="col-lg-3">
         <%= select_tag('customer_id', options_from_collection_for_select(@customers, :id, :name, params[:customer_id]), :prompt=>"All customers" ,:style => "width:240px;") %>
       </div>
       <% end %>
       <% unless @products.blank? %>
       <div class="col-lg-3">
         <%= select_tag('product_id', options_from_collection_for_select(@products, :id, :name, params[:product_id]),:style => "width:240px;") %>
       </div>
       <% end %>
       <div class="col-lg-2">
          <%= text_field_tag :start_date, params[:start_date],  :placeholder => "Start date", :size => '6',:class=>"form-control parsley-validated" %>
       </div>
       <div class="col-lg-2">
          <%= text_field_tag :end_date, params[:end_date],  :placeholder => "End date", :size => '6',:class=>"form-control parsley-validated" %>
       </div>
       <div class="col-lg-2">
          <input type="submit" value="Search" class="btn btn-success"/>
       </div>
      </div> 
    </div>
  </form>
</div>

<script type="text/javascript">
   $('#product_id').select2();
   $('#branch_id').select2();
   $('#customer_id').select2();
</script>


