<!-- Page title -->
<%= render "shared/page_title"%>
<!-- End of Page title -->


<!-- Page content -->
<div id="page">
  <!-- Wrapper -->
  <div class="wrapper">
    <!-- Left column/section -->
        <section class="column width6 first"><br />
        	 <div class="highlight">
        	  <%= render 'shared/flash_msg'%>
                     <%= form_tag :action => 'invite_auditor' do %>
                       <label class='required'>Name</label>
                       <%= text_field_tag 'name' %><br /><br />
                       
                       <label class='required'>Email</label>
                       <%= text_field_tag 'email' %><br /><br />
                       
                       <%= submit_tag 'Invite', :class => 'btn btn-save btn-green' %>
                     <% end %>
             </div><br />        
        </section>
        <!-- End of Left column/section -->
  
      <!-- Right column/section -->
        <aside class="column width2"><br />
        	<a href="/users" class="btn btn-special btn-green btn-green-index"><img src ="/images/white_icon/ic_list.png" class ="icon"/> View user list</a>
           <div id="rightmenu">
                <dl class="first">
                     <dt><img width="16" height="16" alt="" SRC="/images/help.png"></dt>
                     <dd><%= link_to 'Help', "/46/46", :class=>"nyroModal" %></dd>
                     <dd class="last">If you are a new user, you should read "Getting started"</dd>
                </dl>
           </div><br />
        </aside>
       <!-- End of Right column/section -->
    </div>
</div>
<!-- End of Page content -->

