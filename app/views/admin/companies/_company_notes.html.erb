<div class="col-sm-12"><br/>
 <section class="panel">
  <header class="panel-heading">
  <strong>Add New Note</strong>
  </header>
  <div class="panel-body">
   <%= form_for @company,:url=>[:admin, @company], :html => {:class => "form-horizontal"} do |f| %>
   <%= hidden_field_tag "company[company_notes_attributes][0][company_id]", @company.id%>
   <%= hidden_field_tag "company[company_notes_attributes][0][created_by]", @current_user.id%>
   <div class="col-sm-2 text-right">
     <p>
        <%= label_tag "notes", "Company Note:", :class=>"control-label" %>
     </p>
   </div>
   <div class="col-sm-10">
     <p>
        <%= text_area_tag "company[company_notes_attributes][0][description]", nil,:rows => 4,:class => 'bg-focus form-control', :maxlength=>"100" %>
      </p>
     <p align="center">
      <button type="submit" class="btn btn-success">Create Note</button>
     </p>
     </div>
  <% end %>
  </div>
 </section>
</div>
<div class="col-sm-12">
 <section class="panel">
  <header class="panel-heading">
   <strong>Company Notes</strong>
  </header>
  <div class="panel-body">
   <% if @company_notes.blank? %>
    <%= render :partial => "shared/no_record" %>
   <% else %>
   
     <% for note in @company_notes %>
    <div class="row">
    <div class="col-sm-6">
      <p><%= note.description %></p>
    </div>
    <div class="col-sm-3">
      <p><i class="icon-calendar"> </i>Created on <%= note.created_at %></p>
    </div>
    <div class="col-sm-3">
      <p><i class="icon-edit"> </i>Created by <%= SuperUser.find(note.created_by).full_name %></p>
    </div>
    </div>
     <% end %>
   <% end %>
  </div>
 </section>
</div>

    
    