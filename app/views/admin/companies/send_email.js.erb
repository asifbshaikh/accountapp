<% if params[:email].blank? %>
  $('.errorPlace').after("<%= escape_javascript render('shared/flash_msg')%>");
  $(".btnsave").remove();
  $(".save-btn").after("<button class='btnsave btn btn-sm btn-success' type='submit'  data-loading-text='Sending...'>Send</button>");
<% else %>
  $("div[id^='modal']").modal('hide');
  window.location.reload();
  // $(".btnsave").remove();
  $(".save-btn").after("<button class='btnsave btn btn-sm btn-success' type='submit'  data-loading-text='Sending...'>Send</button>");
<% end %>