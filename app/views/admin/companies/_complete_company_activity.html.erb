<form action="update_followup" method="post" class="" data-remote='true' enctype=multipart/form-data >
<div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><i class="icon-remove"></i></button>
          <h4 class="modal-title" id="myModalLabel">Complete Activity</h4>
        </div>
        <div class="modal-body">
        <div class="errorPlace"></div>
      <div class="block">
      
      <%= hidden_field_tag "activity_id"%>
      <%= hidden_field_tag "created_by",@current_user.id%>
       <%= label_tag :time_spent, 'Time Spent' , :class =>"control-label-required" %>
       <%= text_field_tag :time_spent, "", :class => 'bg-focus form-control' %>
      </div>
      
    <div class="block">
       <%= label_tag :notes, 'Notes' , :class => "control-label" %><br/>
       <%= text_area_tag :notes,"",:rows=>4, :class=>"bg-focus form-control"%>
    </div>
        <div class="text-center">
          <div class='save-btn'></div>
            <button  class=" btnsave btn btn-sm btn-success" type='submit'  data-loading-text="Sending...">Save</button>
          <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">Cancel</button>
        </div>
</div>
</div>
</div>
      </form>
