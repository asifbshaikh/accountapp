 <section id="content">
    <div class="main padder">
      <div class="row">
        <div class="col-lg-4 col-lg-offset-4 m-t-large">
        <br>
        <p align="center"><img src="https://nextwavers.profitbooks.net/assets/logo-61785b7f7388a915bea5c82371e8c3ee.png" alt="Login to ProfitBooks"></p>
          <section class="panel">
            <header class="panel-heading text-center">
             Admin Login
            </header>
           <div class="panel-body">
            <%= form_tag :action=>:authenticate , :html=>{:class=>"form-horizontal panel-body"} do %>
            <%= render "shared/flash_msg"%>     
            <div class="block">
             <%= label_tag 'user_name','Username',:class=>"control-label-required" %>
             <%= text_field_tag 'username',nil, :autofocus => "autofocus", :class =>'form-control'%>
            </div>
            <div class="block">
              <%= label_tag 'password','Password',:class=>'control-label-required'%>
              <%= password_field_tag 'password',nil, :class=>'form-control'%>
            </div>
               <input type="submit" name="submit" class="btn btn-success" id="buttonsend" value="Secure Sign in" />
            <% end %>
            </div>
          </section>
        </div>
      </div>
    </div>
  </section>