<%= form_for @campaign, :url => ([:admin, @campaign]), :html=>{:class=>'form-horizontal'} do |f| %>
  <%= render 'shared/form_error' , :object => @campaign %>
      <div class='form-group'>
        <div class="col-lg-8">
        <%= f.label 'Campaign name' , :class => "control-label-required"%>
        <%= f.text_field :campaign_name, :autofocus =>"autofocus" , :class => "form-control" %>
      </div>
      </div>
      <div class='form-group'>
      <div class="col-lg-8">      
        <%= f.label 'Start Date' , :class => "control-label-required"%>
        <%= f.text_field :start_date, :autofocus =>"autofocus", :class => "form-control" %>
      </div>
      </div>
      <div class='form-group'>
        <div class="col-lg-8">
        <%= f.label 'End Date' , :class => "control-label-required"%>
        <%= f.text_field :end_date, :autofocus =>"autofocus", :class => "form-control" %>
      </div>
      </div>
          <div class="col-lg-8 col-lg-offset-4">                      
      <button type="submit" class="btn btn-success">Save</button>
      
    </div>   
<% end %>

