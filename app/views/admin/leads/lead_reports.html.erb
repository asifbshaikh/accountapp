<section id="content">
    <section class="main padder">
          
  <div class="row">
    <div class="col-lg-7">
        <h2><i class="icon-bar-chart text"></i>Lead Activities</h2>
    </div>
       <div class="col-lg-5 m-t-large" align="right">
    
    <a href="#" class="btn btn-white btn-lg " id="use_filter" title="Filter"><i class="icon-filter"></i></a> 
    
    <p></p>
    </div>
  </div>
    
    <div class="row">
    <!-- Table starts -->
          <div class="col-lg-12">
          <section class="panel">
          <div class="panel-body">
              <%= render :partial => "lead_filter" %>
            <% if @leads.blank? %>
          <br />
          <%= render :partial => "shared/no_record" %>
              <% else %>
                    
            <div class="table-responsive row">
              <table id="leads_report" class="table table-striped b-t text-small">
                <thead>
                  <tr>
                    <th width='15%'> Lead Name </span></th>
                    <th> Lead Type </th>
                    <th> Mobile </th>
                    <th> City </th>
                    <th> Status </th>
                    
                  </tr>
                </thead>
                <tbody>
            
                <% @leads.each do |la| %>
                <tr>
                  <td> <%= la.name %></td>
                  <td> <%= la.get_lead_type %></td>
                  <td> <%= la.mobile %></td>
                  <td> <%= la.city %></td>
                  <td> <%= la.get_status %></td>
                  
                </tr>
                <%end%>
              </tbody>
              </table>
            </div>
            
            </div>
          </section>
      <!-- Table ends -->
      <%end%>
        </div>    
</div>
</section>
</section>
