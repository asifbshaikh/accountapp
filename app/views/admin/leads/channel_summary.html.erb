<section id="content">
    <section class="main padder">
          
  <div class="row">
    <div class="col-lg-7">
        <h2><i class="icon-bar-chart text"></i>Channel Summary Report</h2>
    </div>
    <div class="col-lg-5 m-t-large" align="right">
           <a href="#" class="btn btn-white btn-lg " id="use_filter" title="Filter"><i class="icon-filter"></i></a>
        </div>
  </div><br/>
    
    <div class="row">
    <!-- Table starts -->
          <div class="col-lg-12">
          <section class="panel">
            <header class="panel-heading">
              <strong>Channel Summary</strong>
            </header>
          <div class="panel-body">
          <%= render :partial => "channel_filter" %>
            <div class="row">
                <div class="col-lg-8">
                Report for the month:
                      <b><%= @month_date.strftime("%B-%Y") %></b>
                </div>
            </div><br>
            <% if @leads.blank? %>
            <br />
             <%= render :partial => "shared/no_record" %>
            <% else %>


            <div class="table-responsive row">
              <table class="table table-striped b-t text-small" id="channel_summary">
                <thead>
                  <tr>
                    <th> Lead Name </th>
                    <th>Channel</th>
                    <th>Created Date</th>
                  </tr>
                </thead>
                <tbody>
                    <% @leads.each do |lead|%>
                  <tr>
                    <td><%= lead.name%></td>
                    <td><%= lead.channel_name %></td>
                    <td><%= lead.created_at.to_date %></td>
                  </tr>
                  <%end%>
                </tbody>
              </table>
            </div>
          <%end%>
</div>
</section>
</div>
</div>
</section>
</section>
