
<%= form_for @campaign, :url => ([:admin, @campaign]), :html=>{:class=>"m-b-none form-horizontal", :remote=>true} do |f| %>
<div class="modal-dialog">
<div class="modal-content">
  <div class="modal-header">
  <button type="button" class="close" data-dismiss="modal"><i class="icon-remove"></i></button>
  <h4 class="modal-title" id="myModalLabel">New campaign</h4>
  </div>
 <div class="modal-body">
            <div class="errorSection"></div>
  <div class="block">
     <%= label_tag "campaign[campaign_name]","Campaign name", :class =>"control-label-required" %>
     <input type="text" name="campaign[campaign_name]" id="campaign_campaign_name" autocomplete="off" class="form-control"><br>
   </div>

   <div class="block">
     <%= label_tag "campaign[start_date]","Start date", :class =>"control-label-required" %>
     <input type="text" name="campaign[start_date]" id="campaign_start_date" autocomplete="off" class="form-control"><br>
   </div>

   <div class="block">
     <%= label_tag "campaign[end_date]","End date", :class =>"control-label-required" %>
     <input type="text" name="campaign[end_date]" id="campaign_end_date" autocomplete="off" class="form-control"><br>
   </div>
   
    <div class=" row modal-footer"> 
     <div class='save-btn'></div>
       <button  class='btnsave btn btn-sm btn-success' type='submit'  data-loading-text='Adding...'>Add</button>
     <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">Cancel</button>
     </div>
  
</div>
</div>
</div>
  <% end %>