<section id="content">
    <section class="main padder">
          
  <div class="row">
    <div class="col-lg-7">
        <h2><i class="icon-bar-chart text"></i>Time Consumed by Activities</h2>
    </div>
    <div class="col-lg-5 m-t-large" align="right">
           <a href="#" class="btn btn-white btn-lg " id="use_filter" title="Filter"><i class="icon-filter"></i></a>
        </div>
  </div><br/>
    
    <div class="row">
    <!-- Table starts -->
          <div class="col-lg-12">
          <section class="panel">
            <header class="panel-heading">
              <strong>Activity Report</strong>
            </header>
          <div class="panel-body">
          <%= render :partial => "activity_filter" %>
            <% if @activities.blank? %>
            <br />
             <%= render :partial => "shared/no_record" %>
            <% else %>
            <div class="row">
                <div class="col-lg-8">
                Report for the period:
                      <b><%= @start_date.strftime("%d %b %Y") %> To <%= @end_date.strftime("%d %b %Y") %></b>
                </div>
            </div><br>


            <div class="table-responsive row">
              <table class="table table-striped b-t text-small" id="activity_time">
                <thead>
                  <tr>
                    <th> Activity </th>
                    <th>Time Consumed (In Min.)</th>
                    <th>Followed by</th>
                  </tr>
                </thead>
                <tbody>
                <% time = 0%>
                    <% @activities.each do |activity|%>
                  <tr>
                    <td><%= activity.get_activity%></td>
                    <td><%= activity.time_spent %></td>
                    <td><%= activity.lead.assigned_to_name %></td>
                  </tr>
                  <% time += activity.time_spent%>
                    <% end %>
                  <tr>
                    <td></td>
                    <td colspan="2">Total Time : <strong> <%= time/60%>:<%= time%60 %></strong></td>
                  </tr>
                </tbody>
              </table>
            </div>
          <%end%>
</div>
</section>
</div>
</div>
</section>
</section>
