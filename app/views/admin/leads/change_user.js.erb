$(".popup-error").remove();
<% if @lead.errors.any? %>
  $('.errorSection').after("<%= escape_javascript render('shared/form_error',{:object=>@lead})%>");
  $(".btnsave").remove();
  $(".save-btn").after(" <button  class='btnsave btn btn-sm btn-success' type='submit'  data-loading-text='Saving...''>Save</button>");
<% else %>
  $(".btnsave").remove();
  $("#assigned").html("<%= @user.first_name%>");
  $(".save-btn").after("<button class='btn btn-sm btn-success btnsave' type='submit'  data-loading-text='Saving...'>Save</button>");
  $("div[id^='modal4']").modal('hide');
<% end %>