<section id="content">
  <section class="main padder">

    <div class='row'>
      <div class='col-lg-3'>
        <h2><i class="icon-file-text-alt text"></i>Coupon</h2>        
      </div>
      <div class="col-lg-9 m-t-large" align="right">
        <a href="/admin/coupons" class="btn btn-white btn-lg"><i class="icon-mail-reply"></i></a>
    <p></p>
      </div>
    </div>

    <section class="panel">
      <div class="panel-body">
        <%= render :partial => "shared/flash_msg" %>
        <div class="row">
          <div class='col-sm-5'>
            <h4><%= @coupon.name %></h4><br/>
          </div>
          <div class='col-sm-7'>
            <section class="panel">
                <header class="panel-heading">
        <strong>Coupon Details</strong>
        </header>
              <div class="panel-body">
                <div class="col-sm-12">
                <div class="col-sm-4">
                  <strong> Coupon code: </strong><%= @coupon.coupon_code%><br/>
                  <strong> Coupon type: </strong><%= @coupon.coupon_type%><br/>
                  <strong> Discount: </strong><%= @coupon.discount%>
                  </div>
                  <div class="col-sm-4">
                  <strong> Total Amount: </strong><%= @coupon.total_amount%><br/>
                  <strong> Date start: </strong><%= @coupon.date_start%><br/>
                  <strong> Date end: </strong><%= @coupon.date_end%>
                  </div>
                  <div class="col-sm-4">
                  <strong> Uses per coupon: </strong><%= @coupon.uses_per_coupon%><br/>
                  <strong> Uses per customer: </strong><%= @coupon.uses_per_customer%></br>
                  <strong> Status: </strong><%= @coupon.status%>
                  </div>
                </div>
              </div>
            </section>
          </div>
        </div>
      </div>
    </section>
  </section>
</section>