<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <div class="panel-body">
        <%= form_for @coupon, :url => ([:admin, @coupon]), :html=>{:class=>'form-horizontal'} do |f| %>
          <%= render 'shared/form_error' , :object => @coupon %>
          <div class='form-group'>
            <div class="col-lg-4">
              <%= f.label 'Coupon name' , :class=>'control-label-required' %>
              <%= f.text_field :name, :autofocus =>"autofocus", :class=>"form-control bg-focus" %>
            </div>
            <div class='col-lg-1'></div>
            <div class='col-lg-4'>
              <%= f.label 'Coupon code', :class => "control-label-required" %><br/><small>(The code the customer enters to get the discount)</small>
              <%= f.text_field :coupon_code, :class => "form-control bg-focus"%>
            </div>
            </div>
            <div class='form-group'>
            <div class="col-lg-4">
              <%= f.label "Coupon type", :class => "control-label-required" %><br/><small>(Percentage or Fixed Amount)</small>
              <%= f.select(:coupon_type, [['Percentage'],['Fixed Amount']], {:prompt => false}, {:class=>"form-control bg-focus"} )%>
            </div>
            <div class='col-lg-1'></div>
            <div class="col-lg-4">
              <%= f.label :Discount %>
              <%= f.text_field :discount, :class=>"form-control bg-focus" %>
            </div>
          </div>
          <div class='form-group'>
            <div class="col-lg-4">
              <%= f.label "Total amount" %><br/><small>(The total amount that must reached before the coupon is valid.)</small>
              <%= f.text_field :total_amount, :class=>"form-control bg-focus" %>
            </div>
            <div class='col-lg-1'></div>
            <div class="col-lg-4">
              <%= f.label "Date start" %>
              <%= f.text_field :date_start, :class=>"form-control bg-focus" %>
            </div>
          </div>
          <div class='form-group'>
            <div class="col-lg-4">
              <%= f.label "Date end" %>
              <%= f.text_field :date_end, :class =>"form-control bg-focus" %>
            </div>
            <div class='col-lg-1'></div>
            <div class="col-lg-4">
              <%= f.label "Uses per coupon" %><br/><small>(The maximum numbers of times the coupon can be used by any customer.)</small>
              <%= f.text_field :uses_per_coupon, :class =>"form-control bg-focus" %>
            </div>
            
          </div>
          <div class='form-group'>
            <div class="col-lg-4">
              <%= f.label "Uses per customer" %><br/><small>(The maximum numbers of times the coupon can be used by a single customer.)</small>
              <%= f.text_field :uses_per_customer, :class=>"form-control bg-focus" %>
            </div>
            <div class='col-lg-1'></div>
            <div class="col-lg-2">
              <%= f.label "Status"%>
              <%= f.select(:status, [['Enabled'],['Disabled']], {:prompt => false},{:class=>"form-control bg-focus"} )%>
            </div>
            <div class="col-lg-2">
              <%= f.label "Apply for ",:class => "control-label-required"%>
              <%= f.select(:year, [['1 year'],['2 year'],['3 year'],['5 year']], {:prompt => false},{:class=>"form-control bg-focus"} )%>
            </div>
            
          </div>
          <div class="form-group">
            <div class="col-lg-8 col-lg-offset-4">
              <%= f.submit "Save", :class => "btn btn-success" %> &nbsp; 
              <a class="btn btn-default" href="/admin/coupons">Cancel</a>
            </div>
          </div>
        <% end %>
      </div>
    </section>
  </div>
</div>
