<section id="content">
    <section class="main padder">
          
  <div class="row">
    <div class="col-lg-7">
        <h2><i class="icon-bar-chart text"></i>Listing Invoices</h2>
    </div>
       <div class="col-lg-5 m-t-large" align="right">
          <div class="btn-group" >
            <button class="btn btn-success btn-lg"  onclick="location.href= '/admin/billing_invoices/new'";><i class="icon-plus"></i> Add  New Record</button>
          </div>
            <!-- <a href="#" class="btn btn-white btn-lg " id="use_filter" title="Filter"><i class="icon-filter"></i></a>  -->
    
    <p></p>
    </div>
  </div>
    
    <div class="row">
    <!-- Table starts -->
          <div class="col-lg-12">
          <section class="panel">
          <div class="panel-body">
              
            <div class="table-responsive row">
              <table class="table table-striped b-t text-small" id="bill_invoices">
                <thead>
                <tr>
	      		      <th>Invoice no.</th>
	      		      <th>Company</th>
	      		      <th>Payment on</th>
	      		      <th>Amount</th>
	      		    </tr>
              </thead>
              <tbody>
                  <% @billing_invoices.each do |invoice| %>
	      		  	<tr>
	      		  		<td><%= link_to invoice.invoice_number, "/admin/billing_invoices/show?id=#{invoice.id}" %></td>
	      		  		<td><%= invoice.company.name %></td>
	      		  		<td><%= invoice.invoice_date.to_date %></td>
	      		  		<td><%= invoice.amount %></td>
	      		  	</tr>
	      		  	<% end %>
              </tbody>
              <tfoot>
              </tfoot>
              </table>
            </div>
            
            </div>
          </section>
      <!-- Table ends -->
      
        </div>    
</div>
</section>
</section>
