
<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <div class="panel-body">
        <%= form_tag('/admin/email_templates/send_email', :method => "get") do  %>

        <div class='form-group'>
            <div class='col-lg-2 text-right'>
              <%= label_tag  'Email ID' %>
              </div>
            <div class="col-lg-3">
              <%=text_field_tag :email, "sneha@profitbooks.net", :class=>"form-control bg-focus" %>
            </div><br/><br/>
        </div>
        <div class='form-group'>
            <div class='col-lg-2 text-right'>
              <%= label_tag 'Group' %>
            </div>
            <div class="col-lg-3">
              <select name = "group" class="form-control" id="group" value="if(this.selectedIndex!=0) self.location=this.options[this.selectedIndex].value">
                  <option>Select group</option>
                  <option value="all">All</option>
                    <% @months.each do |m| %>
                  <option value=<%= "#{m}" %>><%= m %></option>
                    <% end %>
              </select>
            </div>
            <br/><br/>
        </div>
        <div class='form-group'>
            <div class='col-lg-2 text-right'>
              <%= label_tag  'Subject' %>
            </div>
            <div class="col-lg-3">
              <%= text_field_tag :subject,nil, :class=>"form-control bg-focus" %>
            </div><br/><br/>
        </div>
        <div class='form-group'>
            <div class='col-lg-2 text-right'>
              <%= label_tag 'Text'%>
            </div>
            <div class="col-lg-5">
              <%= text_area_tag :text, nil , :rows => 5, :cols => 50, :class=>"form-control bg-focus" %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-8 col-lg-offset-4">
            <br/><br/>
              <%= submit_tag 'Send', :class => "btn btn-success" %> &nbsp; 
            </div>
          </div>

        <% end %>
      </div>
    </section>
  </div>
</div>