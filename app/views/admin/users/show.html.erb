<section id="content">
  <section class="main padder">

    <div class='row'>
      <div class='col-lg-3'>
        <h2><i class="icon-file-text-alt text"></i> User Details</h2>        
      </div>
      <div class="col-lg-9 m-t-large" align="right">
        <a href="/admin/users" class="btn btn-white btn-lg"><i class="icon-mail-reply"></i></a> 
    <p></p>
      </div>
    </div>

    <section class="panel">
      <div class="panel-body">
        <%= render :partial => "shared/flash_msg" %>
        <div class="row">
          <div class='col-sm-5'>
            <h4><%= @user.full_name%></h4><br/>
          </div>
          <div class='col-sm-7'>
            <section class="panel">
                <header class="panel-heading">
        <strong>User Details</strong>
        </header>
              <div class="panel-body">
                <div class="col-sm-6">
                  <p>
                    <strong> Username : </strong><%= @user.username%>
                  </p>
                  <p><strong> Email: </strong><%= @user.email%></p>
                  <p><strong> Company name: </strong><%= @user.company_name%></p>
                  <p><strong> Role: </strong><%= @user.roles[0].name%></p>
                  <p><strong> Last login: </strong><%= @user.last_login%></p>
                </div>
              </div>
            </section>
          </div>
        </div>
        
        
      </div>
    </section>
  </section>
</section>