<%= form_for @myfile, :html => {:multipart => true, :class=>"form-horizontal"} do |f| %>
  <%= render "shared/form_error", :object => @myfile %>
  <%= f.hidden_field :folder_id %> 
  <div class="block">
    <%= f.label :uploaded_file, "Choose File", :class=>"control-label" %>
    <%= f.file_field :uploaded_file, :class => "btn btn-white" %>
    <%= hidden_field_tag "old_file_size", @myfile.old_file_size %>
  </div>
  <div class="block">
    <%= f.submit "Upload", :class=>"btn btn-success"%>
  </div>
<% end %>
