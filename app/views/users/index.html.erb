  <section id="content">
  <section class="main padder">
    <div class="row">
      <div class="col-lg-3">
        <h2><i class="icon-user text"></i> Employees</h2>
      </div>
      <div class="col-lg-9 m-t-small" align="right">
        <%= link_to raw("<i class='icon-plus'></i>New Employee"), new_user_path, :class=>'btn btn-success btn-lg' %>
        <!-- <a href="#" class="btn btn-default btn-lg"><i class="icon-info"> </i> </a> -->
      </div>
    </div>
    <p></p>
    <div class="row">
      <div class="col-lg-12">
      <div class="row">
        <div class="col-lg-12"><p></p>
          <section class="panel">
            <header class="panel-heading text-right">
              <ul class="nav nav-tabs pull-left"  id="usersTabs">
                <li class='active'>
                  <a data-toggle="tab" href="#active-users-tab">
                    <i class="icon-group icon-large text-default"></i>Active Users
                  </a>
                </li>
                <li class=''>
                  <a data-toggle="tab" href="#inactive-users-tab">
                  <i class="icon-group icon-large text-default"></i>Inactive Users
                  </a>
                </li>
              </ul>
            </header>
            <div class="panel-body">
              <div class="tab-content">
                <div id='active-users-tab' class='tab-pane fade active in'>
                  <div class="table-responsive row">
                    <table id="employee" class="table table-striped m-b-none text-small" data-source="<%= users_url(:format => 'json') %>" >
                      <thead>
                        <%= render :partial=> "table_header" %>
                      </thead>
                      <tbody>
                      </tbody>
                      <tfoot>
                        <%= render :partial => "footer" %>
                      </tfoot>
                    </table>
                  </div>
                </div>
                <div id="inactive-users-tab" class="tab-pane fade">
                  <table id="empinactive" class="table table-striped m-b-none text-small" data-source="<%= users_url(:format => 'json',:tab_ref => "inactive") %>" >
                  <thead>
                     <%= render :partial=> "table_header" %>
                  </thead>
                  <tbody>
                  </tbody>
                  <tfoot>
                    <%= render :partial => "footer" %>
                  </tfoot>
                  </table>
                </div>
              </div>
            </div>
          </section>
        </div>
      </div>
   </section>
  </section>


  </section>

