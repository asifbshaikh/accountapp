<table class="display stylized" id="act_details">
   <div id='user_info_div' ><span class='basic_info'>Basic Info</span></div>
		<tbody>
		 <tr>
			<td>
			  <%= f.label :First_name, :class => "required" %><br />
			  <%= f.text_field :first_name,:autofocus =>"autofocus" %>
			</td>
			<td>
			  <%= f.label :Last_name, :class => "required" %><br />
			  <%= f.text_field :last_name %>
			</td>
		</tr>
			  <tr>
				<td>
					<%= f.label :Email, :class => "required" %><br />
					<%= f.text_field :email %>
				</td>
				<td>
					<%= f.label :Username, :class => "required" %><br />
					<%= f.text_field :username %>
				</td>
			  </tr>
			  <tr>
					<td>
					  <%= f.label :Password, :class => "required" %><br />
					  <%= f.password_field :password, :size => 30 %>
					</td>
						<td>
	            <%= f.label :password_confirmation, {:class=>'required'}%><br />
	            <%= f.password_field :password_confirmation, :size => 30%>
	          </td>
			  </tr>
		</tbody>
</table>
