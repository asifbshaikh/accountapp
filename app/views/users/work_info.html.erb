<% if @company.plan.payroll_enabled? %> 
             <div id="tab2">
          <ul id="tabnav">
            <li class="tab1">
              <a href=<%="/users/personal_info?id=#{@user.id}"%>>Personal Info</a>
            </li>
            <li class="tab2">
              <a href = <%="/users/work_info?id=#{@user.id}"%>>Work Info</a>
            </li>
            <li class="tab3">
              <a href=<%="/users/user_assets?id=#{@user.id}"%>>Assets</a>
            </li>
          </ul>
        </div>
        <div id="task_container">
          <div class="clearfix"></div>    
      <table class="display stylized" id="act_details">       
                    <thead id="user_info">
                        <tr>
                          <th colspan="4">Work Info</th>
                        </tr>
                    </thead>
                    <tbody class="man">
                      <tr>
                         <td><label>Work type</label></td>
                         <td><%= UserSalaryDetail.find(@user.user_salary_detail).work_type unless @user.user_salary_detail.nil?%>
                        </tr>
                        <tr> 
                          <td><label>Bank account number</label></td>
                          <td><%= UserSalaryDetail.find(@user.user_salary_detail).bank_account_number unless @user.user_salary_detail.nil? %></td>
                      <tr>
                          <td><label>Date of joining</label></td>
                          <td><%= UserSalaryDetail.find(@user.user_salary_detail).date_of_joining unless @user.user_salary_detail.nil? %></td>
                        </tr>  
                        <tr>
                         <td><label>Bank name</label></td>
                         <td><%= UserSalaryDetail.find(@user.user_salary_detail).bank_name unless @user.user_salary_detail.nil?%></td>
                      </tr>
                      <tr>
                          <td><label>Work phone</label></td>
                          <td><%= UserSalaryDetail.find(@user.user_salary_detail).work_phone unless @user.user_salary_detail.nil?%></td>
                        </tr>
                        <tr>  
                          <td><label> Branch</label></td>
                          <td><%= UserSalaryDetail.find(@user.user_salary_detail).branch unless @user.user_salary_detail.nil?%></td>
                      </tr>
                      <tr>
                          <td><label>Work location</label></td>
                          <td><%= UserSalaryDetail.find(@user.user_salary_detail).work_location unless @user.user_salary_detail.nil?%></td>
                          </tr>
                          <tr>
                          <td><label> PAN</label></td>
                          <td><%= UserSalaryDetail.find(@user.user_salary_detail).PAN unless @user.user_salary_detail.nil?%></td>
                      </tr>
                      <tr>
                        <td><label>Date of leaving:</label></td>
                          <td><%= UserSalaryDetail.find(@user.user_salary_detail).date_of_leaving unless @user.user_salary_detail.nil? %></td>
                         </tr>
                         <tr> 
                          <td><label>PF account number:</label></td>
                          <td><%= UserSalaryDetail.find(@user.user_salary_detail).PF_account_number unless @user.user_salary_detail.nil?%></td>
                      </tr>
           </tbody>
           <tfoot><tr><td colspan =4></td></tr></tfoot>
          </table>
         </div>
         <% end %>