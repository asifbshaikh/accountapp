        </header>
        <div class="">
            <div class="leave-card-error"></div>
            <div class="leaveCardPlace"></div>
            <%= render "leave_cards/leave_cards_details" %>
        </div>
      </section>
    </div>
    <div class="leave_card_add">
      <section class="panel">
        <header class="panel-heading">
          <strong>New Leave Card</strong><span class="pull-right"><a href="#" title="Back" id ="bck_leave_card" class="btn btn-white btn-sm"><i class="icon-mail-reply"></i></a></span>
        </header>
        <div class="panel-body">
          <%= render :partial=>"/leave_cards/form" %>
        </div>
      </section>
    </div>
  </div>
<% end %>

