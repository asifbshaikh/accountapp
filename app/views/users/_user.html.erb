<tr>
    <td><%= link_to user.username, user %></td>
    <td><%= user.full_name %></td>
    <td><%= user.email %></td>
    <td><%= user.roles[0].name %></td>
    <td>
      
      <div class="btn-group" style="float: right;">
          <button class="btn btn-gray" onclick="location.href='/users/<%= user.id %>'"; >View</button>
          <button class="btn btn-gray dropdown-toggle" data-toggle="dropdown"><span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <% if @current_user.owner? && user.id == @current_user.id %>
             <li><a href= <%= edit_user_path(user) %>>Edit Profile</a></li>  
            <% else %>
               <li><a href= <%= edit_user_path(user) %>>Edit Profile</a></li>  
            <% end %>
            <%if user.id == @current_user.id %>
               <li><a href="/users/reset_password">Change password</a></li>
              <% end %>
            <% if user != @company.users.first %>
            <li class="divider"></li>
            <li><%= link_to 'Delete', user, :confirm => 'Are you sure?', :method => :delete unless user== @company.users.first %></li>
            <% end %>
            
          </ul>
      </div>
    </td>
</tr>
