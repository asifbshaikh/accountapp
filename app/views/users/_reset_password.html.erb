<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal"><i class="icon-remove"></i></button>
      <h4 class="modal-title" id="myModalLabel">Change Password</h4>
    </div>
    <div class="modal-body">
          <div class="errorPlace"></div>
     <form action="/users/set_new_password" method="post" class="m-b-none form-horizontal" data-remote='true' >
    <div class="block">
    <%= hidden_field_tag "user_id", @user.id%>
    <%= label_tag 'old_pass','Old Password',:class=>"control-label-required" %><br/>
    <%= password_field_tag 'old_pass',nil, :class=>"form-control"%>
    </div>
    <div class="block">
    <%= label_tag 'new_pass','New Password',:class=>'control-label-required'%><br/>
    <%= password_field_tag 'new_pass',nil, :class=>"form-control"%>
    </div>
    <div class="block">
    <%= label_tag 'confirm_pass','Confirm Password',:class=>'control-label-required'%><br/>
    <%= password_field_tag 'confirm_pass',nil, :class=>"form-control"%>
    </div>
    </div>

    <div class="modal-footer">
    <div class='save-btn'></div>
      <button  class=" btnsave btn btn-sm btn-success" type='submit'  data-loading-text="Saving...">Save</button>
          <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">Cancel</button>
    </div>
    
    </form>
  </div>
</div>
