<tr class="gradeB">
	<td><%= link_to deleted_withdrawal.transaction_date.strftime("%d-%m-%Y"), deleted_withdrawal, :onclick => 'Modalbox.show( this.href , {title: "Profit Next", width:400}); return false;' %></td>
	<td><%= deleted_withdrawal.voucher_number %></td>
	<td><%= truncate(Account.find(deleted_withdrawal.from_account_id).name, :length=>20) %></td>
	<td><%= truncate(Account.find(deleted_withdrawal.to_account_id).name, :length =>20) %></td>
	<td><%= format_currency deleted_withdrawal.amount %></td>
	<td>
    <div class="btn-group" style="float: right;">
        <button class="btn btn-gray" onclick="location.href='/withdrawals/<%= deleted_withdrawal.id %>'"; >View</button>
        <button class="btn btn-gray dropdown-toggle" data-toggle="dropdown" title="More actions">
        <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
          <li><a href= <%= "/withdrawals/restore_withdrawal?id=#{deleted_withdrawal.id}"%>  >Restore</a></li>
          <li class="divider"></li>
          <li><a href= <%= "/withdrawals/permanent_delete_withdrawal?id=#{deleted_withdrawal.id}"%> data-confirm = "Are you sure, this will permanently deleted?">Delete</a></li>
        </ul>
      </div>     
	</td>
</tr>
