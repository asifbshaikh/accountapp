<%= form_for(LeaveCard.new, :html=>{:class=>'form-horizontal', :remote=>true}) do |f| %>
  <%= hidden_field_tag "leave_card[user_id]", @user.id %>
  <div class="errorPlace"></div>
  <div class="form-group">
    <div class='col-lg-4'>
      <%= f.label :leave_type_id, :class=>"control-label-required" %>
      <%= select_tag("leave_card[leave_type_id]", options_from_collection_for_select(@company.leave_types, :id, :leave_type), :class=>"form-control") %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-lg-4'>
      <%= f.label :total_leave_cnt, "Leave count", :class=>"control-label-required" %>
      <%= f.text_field :total_leave_cnt, :class=>"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-8 col-lg-offset-4">
      <div class='save-btn'></div>
      <%= f.submit "Save", :class => "btn btn-success btnsave", :"data-loading-text"=>"Saving..." %>
    </div>
  </div>
<% end %>
