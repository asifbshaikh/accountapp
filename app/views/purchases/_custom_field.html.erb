			<div class='col-lg-3'>
				<label class='control-label'> <%= @custom_field.custom_label1 %></label>
				<%= text_field_tag "purchase[custom_field1]", "#{@purchase.custom_field1.blank? ? @custom_field.default_value1 : @purchase.custom_field1}", :class =>'form-control bg-focus' %>
			</div>
			<div class='col-lg-1'></div>
	  <% end %>	
		<% if !@custom_field.custom_label2.blank? %>	
