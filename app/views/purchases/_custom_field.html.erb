			<div class='col-lg-3'>
				<label class='control-label'> <%= @custom_field.custom_label3 %></label>
				<%= text_field_tag "purchase[custom_field3]", "#{@purchase.custom_field3.blank? ? @custom_field.default_value3 : @purchase.custom_field3}", :class =>'form-control bg-focus' %>
			</div>
	  <% end %>	
	</div>
<% end %>