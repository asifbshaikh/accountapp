<section id="content">
  <section class="main padder">
    <div class="row">
      <div class="col-lg-4">
        <h2><i class="icon-file text"></i>Payment Vouchers</h2>
      </div>

      <div class="col-lg-8 m-t-large" align="right">
        <%= link_to "<i class='icon-plus'></i> Add New Record".html_safe, new_payment_voucher_path, :class => 'btn btn-success btn-lg' %>
    <a href="#" class="btn btn-white btn-lg " id="use_filter" title='Filter'><i class="icon-filter"></i></a>
    <p></p>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <section class="panel">
          <%= render :partial => "shared/flash_msg"%>
          <header class="panel-heading">
            <ul class="nav nav-tabs pull-left">
              <li class="active"><a href="#payment-voucher" data-toggle="tab"><i class="icon-list"></i>Paid Against Purchases/Expenses</a></li>
              <li class=""><a href="#advance-payment" data-toggle="tab"><i class="icon-list"></i>Advance Payments</a></li>
              <li><a href="#other-payments" data-toggle="tab"><i class="icon-list"></i>Other Payments</a></li>
            </ul>
          </header>
          <div class="panel-body">

            <div class="tab-content">
              <div class="tab-pane active" id="payment-voucher">
                <%= render :partial=>"filter"%>
                <div class='table-responsive'>
                  <table class="table table-striped m-b-none text-small" id="payment_vouchers" data-source="<%= payment_vouchers_url(:format=>'json')%>">
                    <thead>   
                      <%= render :partial => "header" %>
                    </thead>
                    <tbody>
                    </tbody>
                    <tfoot>
                      <%= render :partial => "footer" %>
                    </tfoot>
                  </table>
                </div>
              </div>

              <div class="tab-pane" id="advance-payment">
                <div class='table-responsive'>
                  <table class="table table-striped m-b-none text-small" id="advance_payment_vouchers" data-source="<%= payment_vouchers_url(:format=>'json', :voucher_type=>'1')%>">
                    <thead>   
                      <%= render :partial => "header" %>
                    </thead>
                    <tbody>
                    </tbody>
                    <tfoot>
                      <%= render :partial => "footer" %>
                    </tfoot>
                  </table>
                </div>
              </div>

              <div class="tab-pane" id="other-payments">
                <div class='table-responsive'>
                  <table class="table table-striped m-b-none text-small" id="other_payment_vouchers" data-source="<%= payment_vouchers_url(:format=>'json', :voucher_type=>'2') %>">
                    <thead>   
                      <%= render :partial => "header" %>
                    </thead>
                    <tbody>
                    </tbody>
                    <tfoot>
                      <%= render :partial => "footer" %>
                    </tfoot>
                  </table>
                </div>
              </div>

            </div>
          </div>
        </section>
      </div>
    </div>
  </section>
</section>