<div class="form-group">
	<% if @voucher_setting.custom_sequence? %>
		<div class="col-lg-2 text-right">
			<label class="control-label-required">Voucher Number</label>
		</div>
		<div class="col-lg-2">
			<%= f.text_field :voucher_number, :class=>"form-control bg-focus" %>
		</div>
	<% else %>
		<div class="col-lg-2 text-right">
			<label class="control-label">Voucher Number</label>
		</div>
		<div class="col-lg-2" style='margin-bottom:0;margin-top:0;padding-top:7px;'>
			<%= @payment_voucher.voucher_number %>
			<%= f.hidden_field :voucher_number %>
		</div>
	<% end %>
</div>