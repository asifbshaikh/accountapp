<!-- Page title -->
<%= render 'shared/page_title'%>
<!-- End of Page title -->
<!-- Page content -->
<div id="page">
  <!-- Wrapper -->
  <div class="wrapper">
    <!-- Left column/section -->
    <section class="column width6 first" ></br>
      <div class="highlight">
        <%= render :partial => "shared/flash_msg"%>
        <table class="display stylized" id="act_details">
          <thead>
            <tr><th colspan="2">Leave Details</th></tr>
          </thead> 
          <tbody>
            <tr>
              <td>
                <label>Leave type:</label>
                <%= @leave_type.leave_type %>
              </td>
            </tr>
            <tr>
              <td>
                <label>No. of Leaves:</label>
                <%= @leave_type.allowed_leaves %>
              </td>
            </tr>
            <tr>
              <td>
                <label>Leaves are carried to next year? </label>
                <%= @leave_type.carry_forward? %>
              </td>
            </tr>
            <tr>
              <td>
                <label>Description:</label>
                <%= breaking_word_wrap(@leave_type.description) unless @leave_type.description.blank? %>
              </td>
            </tr>
          </tbody>
          <tfoot>
            <tr>
              <td colspan="2">
              <%= link_to "Edit", edit_leave_type_path(@leave_type), :class => "btn btn-green" %>
              <a rel="nofollow" data-method="delete" data-confirm="Are you sure?" href= "" class="btn" >Delete</a>
              <%= link_to "Back", leave_types_path, :class => "btn btn-gray" %>
              </td>
            </tr>
          </tfoot>
        </table>
      </div><br/>
    </section>
    <!-- End of Left column/section -->
    <!-- Right column/section -->
    <aside class="column width2"><br />
      <%= new_button "Create New Leave Type", new_leave_type_path %>
      <p><%= list_button_black "View Leave Types", leave_types_path %></p>
    </aside>
    <!-- End of Right column/section -->
	</div>	
</div>