<table class="table table-striped b-t">
  <thead>
    <tr>
      <th>Sr. No.</th>
      <th>Purchase #</th>
      <th>Vendor</th>
      <th>Purchase Date</th>
      <th>Amount</th>
      <th><%= @custom_field.custom_label1%></th>
      <th><%= @custom_field.custom_label2%></th>
      <th><%= @custom_field.custom_label3%></th>
     </tr>
  </thead>
  <tbody>
    <% @vouchers.each_with_index do |purchase, index|%>
     <% if !purchase.custom_field1.blank? || !purchase.custom_field2.blank? || !purchase.custom_field3.blank? %>
     <tr>
        <td align="center"><%= index+1 %></td>
        <td><%= link_to "#{purchase.purchase_number}", purchase %></td>
        <td><%= purchase.vendor_name %></td>
        <td><%= purchase.record_date %></td>
        <td><%= format_amount(purchase.amount) %></td>
        <td><%= purchase.custom_field1 unless @custom_field.custom_label1.blank?%></td>
        <td><%= purchase.custom_field2 unless @custom_field.custom_label2.blank?%></td>
        <td><%= purchase.custom_field3 unless @custom_field.custom_label3.blank?%></td>
     </tr>
     <% end %>
    <% end %>
  </tbody>
  <tfoot>
     <tr>
      <td colspan="8"></td>
    </tr>
  </tfoot>
</table>