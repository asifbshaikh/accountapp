<form action = '' class="form-horizontal" method="get" data-validate="parsley">
<div class="form-group">
  <div class="col-lg-12">
    <table>
      <tr>
        <td class="col-lg-2">
         <select name = "voucher_type" id ="custom_field_filter">
         <option value="Invoice" <%= "selected='selected'" if params[:voucher_type]== "Invoice"%>>Invoice</option>
         <option value="Estimate" <%= "selected='selected'" if params[:voucher_type]== "Estimate"%>>Estimate</option>
         <option value="Purchase" <%= "selected='selected'" if params[:voucher_type]== "Purchase"%>>Purchase</option>
         <% if @company.plan.is_inventoriable? %>
         <option value="StockReceiptVoucher" <%= "selected='selected'" if params[:voucher_type]== "StockReceiptVoucher"%> >Stock receipt voucher</option>
         <option value="StockIssueVoucher" <%= "selected='selected'" if params[:voucher_type]== "StockIssueVoucher"%> >Stock issue voucher</option>
         <option value="StockWastageVoucher" <%= "selected='selected'" if params[:voucher_type]== "StockWastageVoucher"%> >Stock wastage voucher</option>
        <% end %>
        </select>
        </td>
      <td class="col-lg-2">
    <%= text_field_tag :custom_field, params[:custom_field], :placeholder => "Custom Field",:class=>"form-control"%>
      </td>
        <td class="col-lg-2">
      <%= text_field_tag :start_date, params[:start_date],  :placeholder => "Start date", :size => '6',:class=>"form-control parsley-validated"  %></td>
      <td class="col-lg-2">
      <%= text_field_tag :end_date, params[:end_date],  :placeholder => "End date", :size => '6',:class=>"form-control parsley-validated"  %></td>
      <td class="col-lg-2">
        <input type="submit" value="Go" class="btn btn-success"/>
        </td>
      </tr>
    </table>
  </div>
</div>
</form>
<script type="text/javascript">
  $('#custom_field_filter').select2();
</script>

