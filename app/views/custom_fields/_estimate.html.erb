<table class="table table-striped b-t">
  <thead>
    <tr>
      <th>Sr. No.</th>
      <th><%= @company.label.estimate_label%> #</th>
      <th><%= @company.label.customer_label%></th>
      <th><%= @company.label.estimate_label%> Date</th>
      <th>Amount</th>
      <th><%= @custom_field.custom_label1 %></th>
      <th><%= @custom_field.custom_label2 %></th>
      <th><%= @custom_field.custom_label3 %></th>
     </tr>
  </thead>
  <tbody>
    <% @vouchers.each_with_index do |estimate, index|%>
     <% if !estimate.custom_field1.blank? || !estimate.custom_field2.blank? || !estimate.custom_field3.blank? %>
     <tr>
        <td align="center"><%= index+1 %></td>
        <td><%= link_to "#{estimate.estimate_number}", estimate %></td>
        <td><%= estimate.customer_name %></td>
        <td><%= estimate.estimate_date %></td>
        <td><%= format_amount(estimate.amount) %></td>
        <td><%= estimate.custom_field1 unless @custom_field.custom_label1.blank?%></td>
        <td><%= estimate.custom_field2 unless @custom_field.custom_label2.blank?%></td>
        <td><%= estimate.custom_field3 unless @custom_field.custom_label3.blank?%></td>
     </tr>
     <% end %>
    <% end %>
  </tbody>
  <tfoot>
     <tr>
      <td colspan="8"></td>
    </tr>
  </tfoot>
</table>