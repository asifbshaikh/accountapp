<div class="form-group">
	<label class="col-lg-4 control-label-required">Business Type</label>
	<div class="col-lg-6">
		<select name='business_type' style='width:100%' class="form-control">
			<option value="" selected="selected" >Please select</option>
			<% @company.get_business_types.sort.each do |object| %>
			<option value="<%= object.first%>" <%= "selected" if @company.business_type == object.first %>><%= object.last %></option>
			<% end %>
		</select>
	</div>
</div>
<div class="form-group">
	<label class="col-lg-4 control-label-required">Select An Industry</label>
	<div class="col-lg-6">
		<select name='industry' style='width:100%' class="form-control">
			<option value="" selected="selected" >Please select</option>
			<% @company.get_industries.sort.each do |object| %>
			<option value="<%= object.first%>" <%= "selected" if @company.industry == object.first %>><%= object.last %></option>
			<% end %>
		</select>
	</div>
</div>
<div class="form-group">
	<label class="col-lg-4 control-label-required">Number of Employees</label>
	<div class="col-lg-6">
		<select name="total_employees" style='width:100%' class="form-control">
			<option value="" selected="selected" >Please select</option>
			<% @company.get_employee_count.sort.each do |object| %>
			<option value="<%= object.first%>" <%= "selected" if @company.source == object.first %>><%= object.last %></option>
			<% end %>
		</select>
	</div>
</div>
<div class="form-group">
	<label class="col-lg-4 control-label-required">Annual Turnover</label>
	<div class="col-lg-6">
		<select name="annual_turnover" style='width:100%' class="form-control">
			<option value="" selected="selected" >Please select</option>
			<% @company.get_annual_turnover.sort.each do |object| %>
			<option value="<%= object.first%>" <%= "selected" if @company.source == object.first %>><%= object.last %></option>
			<% end %>
		</select>
	</div>
</div>
</div>
<div class="form-group">
	<div class="col-lg-9 col-lg-offset-3 actions m-t">
		<button class="btn btn-success btn-sm btn-next" data-last="Finish" data-wizard="next" data-target="#form-wizard" type="submit">Submit</button>
	</div>
</div> 
