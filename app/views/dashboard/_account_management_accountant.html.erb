<div class="form-group">
  <label class="col-lg-4 control-label-required">Who manages your accounts currently?</label>
  <div class="col-lg-6">
   <select name='company_ca_status' class='form-control' style="width:100%">
    <option value="1" <%= "selected" if @company.ca_status == 1%>>Nobody</option>
    <option value="2" <%= "selected" if @company.ca_status == 2%>>I am a CA</option>
    <option value="3" <%= "selected" if @company.ca_status == 3%>>We have a CA</option>
    <option value="4" <%= "selected" if @company.ca_status == 4%>>I need to find a CA</option>
  </select>
  </div>
</div>
  <div class="form-group">
    <div class="col-lg-9 col-lg-offset-3 actions m-t">
      <button class="btn btn-success btn-sm btn-next" data-last="Finish" data-wizard="next" data-target="#form-wizard" type="submit">Take me to the Dashboard</button>
    </div>
  </div>
</div>
