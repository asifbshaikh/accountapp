 <tr>
    <td><%= link_to deleted_credit_note.transaction_date.strftime("%d-%m-%Y"), deleted_credit_note %></td>
    <td><%=  deleted_credit_note.credit_note_number %></td>
    <td><%= truncate ( Account.find(deleted_credit_note.from_account_id ).name, :length => 20) %></td>
    <td><%= truncate(Account.find(deleted_credit_note.to_account_id).name, :length =>20) %></td>
    <td><%= format_currency deleted_credit_note.amount %></td>
		
     <td colspan ="2">
    <div class="btn-group" style="float: right;">
        <button class="btn btn-gray" onclick="location.href='/credit_notes/<%= deleted_credit_note.id %>'"; >View</button>
        <button class="btn btn-gray dropdown-toggle" data-toggle="dropdown" title="More actions">
        <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
          <li><a href= <%= "/credit_notes/restore_credit_note?id=#{deleted_credit_note.id}"%>  >Restore</a></li>
          <li class="divider"></li>
          <li><a href= <%= "/credit_notes/permanent_delete_credit_note?id=#{deleted_credit_note.id}"%> data-confirm = "Are you sure, this will permanently deleted?">Delete</a></li>
        </ul>
      </div>     
    </td>
  </tr>
