<script>
	$(document).ready(function(){
		cal();

	  $("table#purchase_return_line_items input[type=text]").live('keyup', function(e){
			cal();
	    e.preventDefault();
		});

	  $("table#purchase_return_line_items input[type=checkbox]").click(function(e){
			cal();
		});		

	});

	function cal(){
		$("tr#auto-added-row").remove();
  var auto_calculate = new Object();
  var tax_rate = new Object();
  '<% @tax_accounts.each do |tax| %>'
    auto_calculate['<%= tax.id %>'] = '<%= tax.accountable.auto_calculate_tax %>'
    tax_rate['<%= tax.id %>'] = '<%= tax.accountable.tax_rate %>'
  '<% end %>'
		var i=0;
		var total=0;
		var total_tax=0;
		var total_discount=0;
		var purchase_total=0;
		$('table#purchase_return_line_items tbody tr').each(function(){
			// var checkbox=$('table#purchase_return_line_items tbody tr:eq('+i+') input[type=checkbox]').get(0) ;
			// if(checkbox && checkbox.checked){
				var quantity=$('table#purchase_return_line_items tbody tr:eq('+i+') #quantity').val();
				var unitCost=$('table#purchase_return_line_items tbody tr:eq('+i+') #unit-cost').val();
				var discount_percent=$('table#purchase_return_line_items tbody tr:eq('+i+') #discount').val();
				var classType=$('table#purchase_return_line_items tbody tr:eq('+i+')').attr('class');
				var amount=0;
				var isRow=$('table#purchase_return_line_items tbody tr:eq('+i+')').is(':visible');
				if(classType=="item-row" && isRow && quantity && unitCost){
					amount=parseFloat(amount);
					unitCost=parseFloat(unitCost);
					amount=quantity*unitCost;
					if(discount_percent){
						discount_percent=parseFloat(discount_percent);
						var discount = ( discount_percent / 100);
						var x = amount * discount;
						amount=amount-x
						total_discount += x;
					}
					purchase_total+=amount
					total+=amount;
					for (var taxIndex = 0; taxIndex < 2; taxIndex++) {
						data = $('table#purchase_return_line_items tbody tr:eq(' + i + ') #tax-td input[id$="'+taxIndex+'_account_id"]').attr('data-linked');
						if(data){
							var parent_tax_amount=0
							var base_amount = 0
							$.each($.parseJSON(data), function(index,	object){
						    var tax_rate = parseFloat(object["rate"]);
						    var tax_name = object["name"];
						    var class_name = object["class_name"];
						    var calculate_on_percent= parseFloat(object["calculate_on_percent"]);
						    var calculation_method=object["calculation_method"]
						    var tax_amount = 0
						    if(object["parent"]){
		    	    		base_amount=amount*(calculate_on_percent/100.0)
						    	// parent_tax_amount=tax_amount=amount*(tax_rate/100);
						    	if(calculation_method==4){
					                parent_tax_amount = base_amount*(tax_rate/100.0);
					              }else{
					                parent_tax_amount=tax_amount = base_amount*(tax_rate/100.0);
					              }
						    }else{
  	  			    	amount_to_calculate=parent_tax_amount
  					    	if(calculation_method=="2"){
  					    		amount_to_calculate+=base_amount 
  					    	}
  					    	tax_amount = amount_to_calculate*(tax_rate/100);
						    	// tax_amount=parent_tax_amount*(tax_rate/100);
						    }

								if(tax_amount > 0){
									tax_amount = Math.round(tax_amount * 100)/100;
						              console.log("Tax amount "+tax_amount);
						              total_tax += tax_amount;
										total+=tax_amount;
						              if($("."+class_name+" td span.tx-amt").text()){
						              var temp = parseFloat($("."+class_name+" td span.tx-amt").text());
						              $("."+class_name+" td span.tx-amt").text((temp+tax_amount).toFixed(2));
						              }else{
				                $('table#purchase_return_line_items tr.row-link:last').after("<tr id='auto-added-row' class='"+class_name+" row-link'><td colspan='5' style='background-color:#fff;' align='right'>"+tax_name+"</td><td style='background-color:#fff;' align='right'><span class='tx-amt'>"+tax_amount.toFixed(2)+"</span></td><td style='background-color:#fff;'></td></tr>")
				              }
				          }
							});
						}
					};
				}
				$('table#purchase_return_line_items tbody tr:eq(' + i + ') span#amount').text(amount.toFixed(2));
			// }
			$('table#purchase_return_line_items span#pur-total').text(purchase_total.toFixed(2));
			$('table#purchase_return_line_items span#discount').text(total_discount.toFixed(2));
			$('span#tax-amount').text(total_tax.toFixed(2))
			$('table#purchase_return_line_items span#total').text(total.toFixed(2));
			i++;
		});
	}
</script>