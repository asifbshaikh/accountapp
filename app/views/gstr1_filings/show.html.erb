<section id="content">
  <section class="main padder">

    <div class="row">
      <div class="col-lg-5">
        <h2><i class="icon-file text"></i>GSTR1 Filing</h2>
      </div>
      <div class="col-lg-7 m-t-large" align="right">
          <div>      
            <%= link_to raw("<i class='icon-upload'> </i> Upload Data"), gstr1_filings_upload_path(:id => @gstr_one), :class => "btn btn-success"%>
            <%= link_to raw("<i class='icon-done'> </i> Verify with GSTN"), gstr1_filings_verify_path(:id => @gstr_one), :class => "btn btn-success"%>
          
            <%= link_to raw("<i class='icon-refresh'> </i> Update"), gstr1_filings_update_path(:id => @gstr_one), :class => "btn btn-success"%>
          </div>
      </div>  
    </div>


    <div class="row">

      <div class="col-lg-12"><p></p>

        <section class="panel">

         <header class="panel-heading text-right">  
          <ul class="nav nav-tabs pull-left"  id="summaryTabs">
          <% if @type.present? %>
           <li class='' >
             <a data-toggle="tab" href="#transaction-summary-tab">
              Transaction Summary
            </a>
          </li>
          <li class='active'>
            <a data-toggle="tab" href="#upload-verify-tab">
              Upload & Verify
            </a>
          </li>

          <% else %>

          <li class='active' >
             <a data-toggle="tab" href="#transaction-summary-tab">
              Transaction Summary
            </a>
          </li>
          <li class=''>
            <a data-toggle="tab" href="#upload-verify-tab">
              Upload & Verify
            </a>
          </li>

          <% end %>
          <li class=''>
            <a data-toggle="tab" href="#gstr1-summary-tab">
             View GSTR1-Summary
           </a>
         </li>
         <li class=''>
          <a data-toggle="tab" href="#gstr1-return-tab">
            File GSTR1-Return
          </a>
        </li>                      
      </ul>
    </header> 


    <!-- transaction summary -->
    <div class="panel-body">
      <div class="tab-content">
      <% if @type.present? %>
        <div id='transaction-summary-tab' class='tab-pane fade ' >
        <div align="right">
        <span class="badge <%= filling_status_badge(@resp_status) %>">Status: <%= @resp_status %></span>
        </div>
          <%= render :partial => "transaction_summary"%>
        </div>
        <div id='upload-verify-tab' class='tab-pane fade active in'>
        <div align="right">
        <span class="badge <%= filling_status_badge(@resp_status) %>">Status: <%= @resp_status %></span>
        </div>
          <%= render :partial => "upload_verify_summary"%>
        </div>
      <% else %>
        <div id='transaction-summary-tab' class='tab-pane fade active in' >
        <div align="right">
        <span class="badge <%= filling_status_badge(@resp_status) %>">Status: <%= @resp_status %></span>
        </div>
          <%= render :partial => "transaction_summary"%>
        </div>
        <div id='upload-verify-tab' class='tab-pane fade'>
        <div align="right">
        <span class="badge <%= filling_status_badge(@resp_status) %>">Status: <%= @resp_status %></span>
        </div>
          <%= render :partial => "upload_verify_summary"%>
        </div>

      <% end %>
        <div id='gstr1-summary-tab' class='tab-pane fade'>
        <div align="right">
        <span class="badge <%= filling_status_badge(@resp_status) %>">Status: <%= @resp_status %></span>
        </div>
          <%= render :partial => "view_gstr1_summary"%>
        </div>
        <div id='gstr1-return-tab' class='tab-pane fade'>
          <%= render :partial => "file_gstr1_return"%>
        </div>
      </div>
    </div>
    <!-- </div> -->
    <!-- end transaction summary -->

    <!-- upload -->

  <!-- end upload -->



  <% if @show_modal %>
  <div id="model1" class="modal fade">
    <%= render "request_gross_values"%>
  </div>
  <% end %>

</section>
</div>
</div>
</section>
</section>