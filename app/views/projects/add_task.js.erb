$(".popup-error").remove();
<% if @task.errors.any? %>
  $('.errorSection').after("<%= escape_javascript render('shared/popup_form_error',{:object=>@task})%>");
<% else %>
  $("div[id^='modal']").modal('hide');
  window.location.reload()
<% end %>
$(".btnsave").remove();
$(".save-btn").after("<button class='btnsave btn btn-sm btn-success' type='submit'  data-loading-text='Saving...'>Save</button>");

