<div class="panel panel-info data-filter" id="filter">
  <div class="panel-heading"><h4 class="panel-title" >Filter</h4></div>
  <form action = '' class="form-horizontal" method="get">
    <div class="row">
      <div class="form-group"><br/>
      <div class="col-lg-1"></div>
          <div class="col-lg-2">                  
            <%= select_tag('account_id', options_from_collection_for_select(@accounts, :id, :name,params[:account_id]), {:prompt => 'Select Bank', :style => "width:180px;"}) %>
          </div>
        <div class="col-lg-2">
          <%= text_field_tag :as_on_date, params[:as_on_date],  :placeholder => "As on date", :size => '6',:class=>"form-control parsley-validated" %>
        </div>
        <div class="col-lg-2">
          <input type="submit" value="Search" class="btn btn-success"/>
        </div>
      </div> 
    </div>
  </form>
</div>

<script type="text/javascript">
   $('#account_id').select2();
</script>


