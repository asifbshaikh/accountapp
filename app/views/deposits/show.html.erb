<section id="content">
  <section class="main padder">
    <div class="row">
      <div class="col-lg-6">
        <h2><i class="icon-file-text-alt text"></i> Deposit Cash Detail </h2>
      </div>
      <div class="col-lg-6 m-t-large" align="right">
        <a href="/deposits/new" class="btn btn-success btn-lg"> + New transaction</a>
        <div class="btn-group">
      <button  onclick="location.href= '<%= edit_deposit_path(@deposit)%>'"; class="btn btn-info btn-lg" > <i class="icon-edit"> </i> Edit</button>
          <button class="btn btn-info btn-lg dropdown-toggle" data-toggle="dropdown">
            <span class="caret"></span><i></i>
          </button>
          <ul class="dropdown-menu">
            <li><%= link_to raw('<i class="icon-trash"> </i>Delete '), deposit_path(@deposit), :method => "delete", :confirm => "Are you sure?" %></li>
          </ul>
        </div>
        <%= link_to raw('<i class="icon-mail-reply"> </i>Back'), banking_index_path, :class => 'btn btn-default btn-lg' %>
        <p></p>
      </div>  
    </div>
    <section class="panel">
      <div class="panel-body">
        <div class="row">
          <!-- Invoice second section -->
          <div class="col-sm-8">
            <section class="panel">
              <div class="panel-body">
                <!-- Invoice basic details -->
                <div class="col-sm-7">
                  <p>
                    <strong> Voucher Number: </strong><%= @deposit.voucher_number %>
                  </p>
                  <p><strong> From Account: </strong> <%= @deposit.from_account_name %></p>
                  <p><strong> To Account: </strong> <%= @deposit.to_account_name %></p>
                  <p><strong> Amount: </strong> <%= format_currency format_amount(@deposit.amount) %></p>
                </div>
              </div>
              
              <footer class="panel-footer">
                <div class="row">
                  <div class="col-sm-6"><i class="icon-calendar"> </i> Deposit on <%=@deposit.transaction_date %> by <%= User.find(@deposit.created_by).full_name %></div>
                  
                </div>
              </footer>
            </section>
          </div>
          <!-- Invoice second section ends-->
        </div>
        <!-- first row ends -->
        <!-- Invoice table ends -->
      <div class="row">
          <%if !@deposit.description.blank? %>
          <div class="col-sm-6">
            <p>
              <label for="productcat">Description</label><br/>
              <%= breaking_word_wrap(@deposit.description)%>
            </p>
          </div>
          <% end %>
        </div>
      </div>
    </section>
  </section>
</section>