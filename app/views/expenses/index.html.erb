<section id="content">
  <section class="main padder">
    <div class="row">
      <div class="col-lg-3">
        <h2><i class="icon-file text"></i>Expenses</h2>
      </div>
      <div class="col-lg-9 m-t-large" align="right">
        <%= link_to "<i class='icon-plus'></i> New Expense".html_safe, new_expense_path, :class => 'btn btn-success btn-lg' %>
        <a href="#" class="btn btn-white btn-lg " id="use_filter"><i class="icon-filter"></i></a>
      </div>
    </div>
    <p></p>
    <div class="row">
      <div class="col-lg-12">
        <section class="panel">
        <%= render "filter" %>
          <%= render "shared/flash_msg" %>
          <div class="table-responsive">
            <table class="table table-striped m-b-none text-small" id="expenses" data-source="<%= expenses_url(:format => "json")%>">
              <thead>
                <%= render :partial => "header" %>
              </thead>
              <tbody>
              </tbody>
              <tfoot>
                <%= render :partial => "footer" %>
              </tfoot>
            </table>
          </div>
        </section>
      </div>
    </div>
  </section>
</section>
