<% @designations.each do |deg| %>
 <tr>
   <td>
     <%= best_in_place deg, :title, :path => "/designations/#{deg.id}", :nil=> '<span class ="variable_item">Click here to add content</span> ', :html_attrs => {:maxlength => 50, :class=>"bg-focus form-control"} %>
   </td>
   <td>
    <%= best_in_place deg, :description,:type=> :textarea, :path => "/designations/#{deg.id}", :nil=> '<span class ="variable_item">Click here to add content</span> ', :html_attrs => {:maxlength => 200, :class=>"bg-focus form-control"} %> 
   </td>
   <td class="text-center">
    <a rel="nofollow" data-method="delete" data-confirm="Are you sure?" href= "/designations/<%= deg.id%>"  title="Delete" ><i class="icon-trash"></i></a> 
   </td>
 </tr>
 <% end %>