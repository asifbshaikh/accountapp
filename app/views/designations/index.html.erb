<script>
	$(document).ready(function(){
		'<% 
  	@data = []
  	 for des in @designations
  	 	@data<<des.title
  	 	@data<<des.description
  	 end
  	 %>'
  	data = '<%= @data.join(',')%>'.split(',');
    $("input#autocomplete").autocomplete({
    	source: data
	});
	});
</script>
<!-- Page title -->
<!-- Page title -->
<div id ="pagetitle">
	<div class ="wrapper" >
		<h1>Organisation Settings &rarr;<span>Manage Designation Title</span></h1>
		<%= form_for @search, :method => "get" do |f| %>
		<%=f.text_field :title_or_description_like, :id =>"autocomplete" , :placeholder=>"search"%>
		<%end%>
	</div>
</div>
<!-- End of Page title -->

<!-- Page content -->
<div id="page">
    <!-- Wrapper -->
<div class="wrapper">
   <!-- Left column/section -->
  <section class="column width6 first"></br>
    <div id="tabs-all" class="highlight">
    <%= render :partial => "shared/flash_msg"	%>
    <div id="timesheet">
     <% if @designations.blank? %>
        <%= render :partial => "shared/no_record" %>
     <% else %>
      <table class="display stylized" id="example">
        <thead>   
           <%= render :partial => "header" %>
        </thead>
        <tbody>
          <%= render :partial => "designation", :collection => @designations %>
        </tbody>
        <tfoot>
          <%= render :partial => "footer" %>
        </tfoot>
      </table>    
      <div class="clear">
	<div class="width3 column">
	 <%= paginate @designations %>
	</div>
      </div> 
     <% end %>
    </div>
   </div><br />
  </section>
 <!-- End of Left column/section -->
 <!-- Right column/section -->
  <aside class="column width2"><br />
  <%= new_button "Create New Designation", new_designation_path %>
     <div id="rightmenu">
                 <dl class="first">
                       <dt><%= image_tag "help.png" %></dt>
                       <dd><a href="/helps/41" class="nyroModal">Help</a></dd>
                       <dd class="last">This page displas the list of all designations.<br/>Click on title to view more details.</dd>
                 </dl>
           </div><br />
  
    </aside>
  <!-- End of Right column/section -->
 
   </div>
   <!-- End of Wrapper -->

</div>
<!-- End of Page content -->



