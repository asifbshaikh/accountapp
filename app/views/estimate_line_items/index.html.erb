<% @estimate_line_items.each do |estimate_line_item| %>
  <tr>
    <td><%= estimate_line_item.estimate_id %></td>
    <td><%= estimate_line_item.account_id %></td>
    <td><%= estimate_line_item.quantity %></td>
    <td><%= estimate_line_item.unit_rate %></td>
    <td><%= estimate_line_item.discount %></td>
    <td><%= estimate_line_item.tax %></td>
    <td><%= estimate_line_item.amount %></td>
    <td><%= estimate_line_item.description %></td>
    <td><%= link_to 'Show', estimate_line_item, :onclick => 'Modalbox.show( this.href , {title: "Profit Next", width:400}); return false;' %></td>
    <td><%= link_to 'Edit', edit_estimate_line_item_path(estimate_line_item) %></td>
    <td><%= link_to 'Delete', estimate_line_item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

