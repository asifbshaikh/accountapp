<div class="btn-group">
  <button  onclick="location.href= '<%= edit_debit_note_path(@debit_note)%>'"; class="btn btn-info btn-lg" > <i class="icon-edit"> </i> Edit</button>
  <button class="btn btn-info btn-lg dropdown-toggle" data-toggle="dropdown">
    <span class="caret"></span><i></i>
  </button>
  <ul class="dropdown-menu">
  <% if @debit_note.allocation_enable? %>
  <li><%= link_to raw('<i class="icon-anchor"> </i>Allocate Amount '), "/debit_notes/allocate?id=#{@debit_note.id}"%></li>
  <% end %>
    <li><%= link_to raw('<i class="icon-trash"> </i>Delete '), debit_note_path(@debit_note), :method => "delete", :confirm => "Are you sure?" %></li>
  </ul>
</div>