<div class='form-group'>
	<div class='col-lg-2 text-right'>
		<%= label_tag "deposit_to_account_id", "Pay To", :class => "control-label-required" %>
	</div>
	<div class='col-lg-10'>
		<%= select_tag("purchase_advance[to_account_id]", options_from_collection_for_select_with_data(@to_accounts, :id, :name, defined?(@purchase_advance) ? @purchase_advance.to_account_id : nil , :"currency"=>:get_currency), {:prompt => 'Type to select', :style=>"width:260px;"}) %>
<span id="payment-currency"></span>
  </div>
</div>
<div class="form-group exc_rate">
	<div class="col-lg-2 text-right">
		<label class="control-label">Exchange Rate in <%= @company.currency_code %></label>
	</div>
	<div class="col-lg-3">
		<%= text_field_tag "purchase_advance[exchange_rate]", defined?(@purchase_advance) ? @purchase_advance.exchange_rate : "" , :class=>'form-control bg-focus text-right', :style=>"width:120px;" %>
	</div>
</div>
<div class='form-group'>
	<div class='col-lg-2 text-right'>
		<%= label_tag "From_account_id", "Pay From", :class => "control-label-required" %>
	</div>
	<div class="col-lg-3">
		<div class='input-group'>
		<%= select_tag("purchase_advance[from_account_id]", options_from_collection_for_select_with_add_new(@from_accounts, :id, :name, defined?(@purchase_advance) ? @purchase_advance.from_account_id : ""), {:prompt => 'Type to select', :style => "width:260px;"}) %>
    </div>
	</div>
</div>
<div class='form-group'>
	<div class='col-lg-2 text-right'>
		<%= label_tag "Voucher_date", "Voucher Date", :class => "control-label-required" %>
	</div>
	<div class='col-lg-3'>
		<%= text_field_tag "purchase_advance[voucher_date]", defined?(@purchase_advance) ? @purchase_advance.voucher_date : "", :class=>'form-control bg-focus', :style=>"width:120px;" %>
	</div>
</div>
<div class='form-group single-payment-field'>
	<div class='col-lg-2 text-right'>
		<%= label_tag "amount", "Amount", :class => "control-label-required" %>
  </div>
  <div class='col-lg-3'>
    <%= text_field_tag "purchase_advance[amount]", defined?(@purchase_advance) ? @purchase_advance.amount : "",:class=>"form-control bg-focus text-right", :onkeydown => 'return numbersOnly(event);', :maxlenght=>'11', :style=>"width:120px;" %> 
	</div>
</div>
<div class='form-group hide-tds'>
	<div class='col-lg-2 text-right'>
		<%= label_tag "payment_mode", "TDS Applicable?", :class=>'control-label' %>
	</div>
	<div class='col-lg-10'>
		<div class="btn-group" data-toggle="buttons">
		  <label class="btn btn-sm btn-default tds_yes <%= (params[:tds] == 'yes')? 'active' : ''%>">
		  <%= radio_button_tag :tds,'yes', (params[:tds] == 'yes') %>
		  <i class="icon-ok icon-large text-active"></i>Yes
		  </label>
		  
		  <label class="btn btn-sm btn-default tds_no <%= (params[:tds].blank? || params[:tds] == 'no')? 'active' : ''%>">
		  <%= radio_button_tag :tds,'no', (params[:tds].blank? || params[:tds] == 'no') %>
		  <i class="icon-ok icon-large text-active"></i>No
		  </label>
		</div>
	</div>
</div>
<div class='tds-pay' style='display: none;'>
	<div class='form-group'>
		<div class='col-lg-2'></div>
		
    <div class="col-sm-6"></div>
	</div>
</div>
<script type="text/javascript"> 
  $("#purchase_advance_from_account_id").select2();
  $("#purchase_advance_to_account_id").select2();
  $("#purchase_advance_tds_account_id").select2();
</script>