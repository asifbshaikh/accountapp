<section id="content">
  <section class="main padder">
    <div class="row">
      <div class="col-lg-10">
          <h2><i class="icon-edit text"></i>Create New Folder </h2>
      </div>
      <div class="col-lg-2 m-t-large" align="right">
      <%= link_to raw('<i class="icon-mail-reply"> </i>'), db_index_path, :class => 'btn btn-default btn-lg', :title =>"Back" %><p></p>
      </div>  
    </div>
    <div class="row">
      <div class="col-lg-12">
        <section class="panel">
          <div class="panel-body">
            <%= form_tag({:action => :create_folder}, :class=>"form-horizontal" ) do %>
              <%= hidden_field_tag 'path', URI.encode(params[:path].strip) %>
              
              <div class="col-lg-4">
              <div class="form-group">  
                 <label class=" control-label-required">Folder name </label>
                 <%= text_field_tag 'folder', nil, :class=>"bg-focus form-control" %> 
              </div> 
              <div class="form-group">  
                <%= submit_tag 'Create', :class => 'btn btn-success '%>
               <%= link_to 'Back', {:action => 'index', :path => params[:path]}, :class => 'btn btn-default' %>
               </div>    
               </div>
             <% end %> 

          </div>
        </section>
      </div>
    </div>
  </section>
</section>