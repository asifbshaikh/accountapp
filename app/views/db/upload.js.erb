<% if request.method != 'POST'%>
  $(".prev_data").remove();
  $("#putHere").after("<%= escape_javascript render :partial =>  'upload_form' %>");
  var h = $("#popup_box_fixed").height();
  var w = $("#popup_box_fixed").width();
  var windH = $(window).height();
  var windW = $(window).width();
  var left = (windW - w)/2;
  var top1 = (windH - h)/2;
  $("#popup_box_fixed").css({'left': left, 'top': top1});
  $('#popup_box_fixed').fadeIn("slow");
<% else %>
  <% if @resp %>
    $('#oldData').remove();
    $('#newData').after("<%= escape_javascript render :partial => 'dropbox_files' %>");
  <% else %>
    $('span.no-filename').text('File name can not be blank.');
  <% end %>
<% end %>
