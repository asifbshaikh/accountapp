<section id="content">
  <section class="main padder">
    <div class="row">
      <div class="col-lg-10">
          <h2><i class="icon-file-close text"></i>Upload New File</h2>
      </div>
      <div class="col-lg-2 m-t-large" align="right">
      <%= link_to raw('<i class="icon-mail-reply"> </i>'), db_index_path, :class => 'btn btn-default btn-lg', :title =>"Back" %><p></p>
      </div>  
    </div>
    <div class="row">
      <div class="col-lg-12">
        <section class="panel">
          <div class="panel-body">
          <%= form_tag({:action => :upload}, :multipart => true, :class=>"form-horizontal") do %>
          <%= hidden_field_tag 'path', URI.encode(params[:path].strip) %>
          <div class="col-lg-4">
            <div class="form-group">  
            <label class="control-label-required">File name </label>
            <%= file_field_tag 'file', :class => "btn btn-white" %>
            </div>
            <div class="form-group">
          <%= submit_tag 'Upload', :class => 'btn btn-success '%>
          <%= link_to 'Back', {:action => 'index', :path => params[:path]}, :class => 'btn btn-default' %>
          </div>
         </div>
        <% end %>
        </div>
        </section>
      </div>
    </div>
  </section>
</section>


