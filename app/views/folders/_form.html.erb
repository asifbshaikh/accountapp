<%= form_for @folder, :html=>{:class=>"form-horizontal"} do |f| %>  
 <%= render "shared/form_error", :object => @folder %> 
  <%= f.hidden_field :parent_id %>
  <div class="block">  
     <%= f.label :name,"Folder Name", :class=>"control-label"%>
     <%= f.text_field :name,:class=>"bg-focus form-control" %>  
  </div> 
  <div class="block ">  
        <%= f.submit "Save", :class => "btn btn-success" %>
   </div>    
 <% end %> 
