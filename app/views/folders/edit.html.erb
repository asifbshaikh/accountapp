<section id="content">
  <section class="main padder">
    <div class="row">
      <div class="col-lg-10">
          <h2><i class="icon-edit text"></i>Rename Folder </h2>
      </div>
      <div class="col-lg-2 m-t-large" align="right">
      <%= link_to raw('<i class="icon-mail-reply"> </i>'), documents_index_path, :class => 'btn btn-default btn-lg', :title =>"Back" %><p></p>
      </div>  
    </div>
    <div class="row">
      <div class="col-lg-12">
        <section class="panel">
          <div class="panel-body">
            <%= form_for @folder, :html=>{:class=>"form-horizontal"} do |f| %>  
             <%= render "shared/form_error", :object => @folder %> 
              <%= f.hidden_field :parent_id %>
              <div class="col-lg-4">
              <div class="form-group">  
                 <%= f.label :name,"Folder Name", :class=>"control-label"%>
                 <%= f.text_field :name,:class=>"bg-focus form-control" %>  
              </div> 
              <div class="form-group">  
                <%= f.submit "Rename", :class => "btn btn-success" %>
                <% if @folder.parent %>  
                 <%= link_to "Back to '#{@folder.parent.name}' Folder", browse_path(@folder.parent), :class=>"btn btn-default" %>  
               <% else %>  
                <a class="btn btn-default" href="/documents/index">Cancel</a> 
              <% end %> 
               </div>    
               </div>
             <% end %> 

          </div>
        </section>
      </div>
    </div>
  </section>
</section>

