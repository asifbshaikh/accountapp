<!-- Page title -->
<%= render 'shared/page_title'%>
<!-- End of Page title -->

<!-- Page content -->
<div id="page">
    <!-- Wrapper -->
    <div class="wrapper">
       <!-- Left column/section -->
       <section class="column width6 first"></br>
        <div id="tabs-all" class="highlight">
         <%= render :partial => "shared/flash_msg"  %>
        <div id="tabs">
          <div id="tab1">
            <ul id="tabnav">
              <li class="tab1"><a href="/leave_requests/pending_approval">Pending approval</a></li>
              <li class="tab2"><a href="/leave_requests/approved">Approved</a></li>
              <li class="tab2"><a href="/leave_requests/cancelled">Cancelled</a></li>
            </ul>
          </div>
          <div id="task_container">
            <div id="tabs-all"> 
                    <% if @leave_requests.blank? %>
                        <%= render :partial => "shared/no_record", :locals => { :message => "You don't have any approved leave requests."} %>
                    <% else %>
                     <%= paginate @leave_requests %>
                        <table class="display stylized" id="example">
                          <thead>   
                            <%= render :partial => "header" %>
                          </thead>
                          <tbody>
                             <%= render :partial => "leave_request", :collection => @leave_requests %>
                          </tbody>
                          <tfoot>
                            <%= render :partial => "footer" %>
                          </tfoot>
                        </table> 
                        <div class="clear">
                     <div class="width3 column">
                       <%= paginate @leave_requests %>
                     </div>
                  </div>   
                    <% end %>
               </div>
       </div><br />
       </section>
      <!-- End of Left column/section -->
      
    <!-- Right column/section -->
    <aside class="column width2"></br>
         <a href="/leave_requests/new" class="btn btn-special btn-green btn-green-new"><img src= "/images/add.png" class ="icon"/>Create leave request</a>
         <div id="rightmenu">
                 <dl class="first">
                       <dt><img width="16" height="16" alt="" SRC="/images/help.png"></dt>
                       <dd><a href="#" class="nyroModal">Help</a></dd>
                       <dd class="last">This page displays the list of all the leave requests.<br/>Click onleave type to view more details.</dd>
                 </dl>
           </div><br />
  
    </aside>
  <!-- End of Right column/section -->
 
   </div>
   <!-- End of Wrapper -->

</div>
<!-- End of Page content -->
