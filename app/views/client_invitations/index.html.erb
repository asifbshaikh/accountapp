<section id="content">
  <div class="main padder">
    <div class="row">
      <div class="col-lg-4 col-lg-offset-4 m-t-large"><br><p align="center"><%= image_tag 'logo.png', :alt => 'Login to Profitbooks', :disposition => 'inline' %></p> 
        <section class="panel">
          <div class="col-lg-9 m-t-large" align="left" >
            <button class="btn btn-success btn-xs dropdown-toggle" title="Add Client" data-toggle="modal" data-target='#modal1'>
              <span class="dropdown-label"><i class="icon-plus"></i> Add Client</span>  
            </button> 
          </div>
          <div class="m-t m-b-large" align="right">
            <a href="/auditor_login/switch" title="Main Dashboard" id="dashboard_tour"><i class="btn btn-info btn-xs dropdown-toggle">back</i></a>
          </div>
          <header class="panel-heading text-center"><b>Client Invitation status</b><br></header>
          <div class="row">
            <div class="col-lg-12">
              <section class="panel">
                <div class="panel-body">
                  <%= render :partial=> "shared/flash_msg"%>
                  <div class="table-responsive row">
                    <table id="clients" class="table table-striped m-b-none text-small">
                      <thead>
                        <tr>
                          <th>Name</th>
                          <th>Email</th>
                          <th>Status</th> 
                          <th>Action</th>                        
                        </tr>
                      </thead>
                      <tbody>
                        <% if @client_invitations.present? %> 
                          <% @client_invitations.each do |clients| %>
                            <tr>
                            <td><%= clients.name %></td>
                            <td><b><%= clients.email %></b></td>
                            <td><b><%= clients.get_status %></b></td>
                            <td class="text-right"><%= link_to '<i class="icon-trash"></i>'.html_safe, clients, :confirm => 'Are you sure?', :class=>"btn btn-default btn-sm", :title=>"Delete",:method => 'delete' %>
                              
                            </td>
                            </tr>
                          <% end %>
                        <% end %>
                      </tbody>
                      <tfoot>
                        <tr style="visibility:hidden">
                          <th>Name</th>
                          <th>Email</th>
                          <th>Status</th>
                          <th class="text-center">Action</th>
                        </tr>
                      </tfoot>
                    </table>
                  </div>
                </div>
              </section>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
</section>


<div id="modal1" class="modal fade">
    <%= render "add_client_form" %>
</div>