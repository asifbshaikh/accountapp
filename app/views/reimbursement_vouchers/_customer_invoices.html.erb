<div class="col-lg-12" id="unpinv">
<h4>Showing unpaid invoiced for the selected customer:</h4>
	<table class="table table-striped">
	<thead>
	<tr>
	<th>Invoice #</th>
	<th>Amount Due</th>
	<th>Due Date</th>
	<th>TDS Deducted</th>
	<th>Received Amount</th>
	</tr>
	</thead>
	
	<tbody>
	<% @cust_invoices.each do |invoice| %>
	<tr>
	<td><%= invoice.invoice_number%></td>
	<td><%= invoice.amount %></td>
	<td><%= invoice.due_date %></td>
	<td><input type="text" name="tds" placeholder="" data-required="false" class="form-control" size="10"></td>
	<td><input type="text" name="amount" placeholder="" data-required="true" class="form-control" size="10"></td>
	</tr>
	<tr>
	<% end %>
	<tr>
	<td colspan="4" align="right"><strong>Total</strong></td>
	<td><strong>Rs. 123453434</strong></td>
	</tr>
	</tbody>
	</table>
</div>

