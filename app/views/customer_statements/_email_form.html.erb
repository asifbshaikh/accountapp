<form action="/customer_statements/email_customer_statement" method="post" class="" data-remote='true' >
   <%= hidden_field_tag('start_date', start_date) %>
   <%= hidden_field_tag('end_date', end_date) %>
   <%= hidden_field_tag('account_id', account_id) %>
<div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><i class="icon-remove"></i></button>
          <h4 class="modal-title" id="myModalLabel">Email customer statement</h4>
        </div>
        <div class="modal-body">
        <div class="errorPlace"></div>
    <div class="block">
       <%= label_tag :email, 'Email ID' , :class =>"control-label-required" %>
       <%= text_field_tag :email, "#{@customer.is_vendor? ? @customer.vendor.email : @customer.customer.email}", :class => 'bg-focus form-control' %>
      </div>
      <div class="block">
       <%= label_tag :email2, 'CC', :class =>"control-label" %>
       <%= text_field_tag :email2,"", :class => 'bg-focus form-control' %>
      </div>
      <div class="block">
       <%= label_tag :subject, 'Subject' , :class => "control-label" %>
       <%=text_field_tag :subject, "New customer statement has been created for you", :class => 'bg-focus form-control' %>
      </div>
      
    <div class="block">
       <%= label_tag :text, 'Text' , :class => "control-label" %><br/>
       <%= text_area_tag  :text,
        "Hello #{@customer.name},
            Please find the customer statement attached with this email.
  Thanks,
  #{@company.name}",
      :rows=>4, :class=>"form-control"%>
    <div class="block"><br/>
       <label><i class="icon-paper-clip icon-large"></i></label>
       <%= image_tag 'pdf.gif' %> customer_statement.pdf
    </div>
    </div>
        <div class="text-center">
          <div class='save-btn'></div>
            <button  class=" btnsave btn btn-sm btn-success" type='submit'  data-loading-text="Sending...">Send</button>
          <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">Cancel</button>
        </div>
</div>
</div>
</div>
      </form>
