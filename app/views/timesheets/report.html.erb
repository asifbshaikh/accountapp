  <section id="content">
    <section class="main padder">

	<div class="row">
		<div class="col-lg-7">
        <h2><i class="icon-bar-chart text"></i>Timesheet Report</h2>
		</div>
       <div class="col-lg-5 m-t-large" align="right">
		<a href="#" class="btn btn-white btn-lg " id="use_filter" title="Filter"><i class="icon-filter"></i></a>
    <% if !@tasks.blank? %>
    <%= link_to_pdf params %>
    <%= link_to_xls params %>
     <%end%>
    <p></p>
    </div>
	</div>

		<div class="row">
		<!-- Table starts -->
	        <div class="col-lg-12">
          <section class="panel">
          <div class="panel-body">
              <%= render :partial => "report_filter" %>
            <% if @tasks.blank? %>
					<br />
					<%= render :partial => "shared/no_record" %>
     			    <% else %>
                <%= render :partial => "report_header" %>
            <div class="table-responsive row">
              <table class="table table-striped b-t text-small">
                <thead>
				    <tr>
				      <th>Project</th>
  					  <th>Task</th>
  					  <th>Assign To</th>
  					  <th>Assign Date</th>
  					  <th>Completed Date</th>
  					  <th>Time (hrs.)</th>
				    </tr>
				</thead>
                <tbody>
                  	<% @tasks.each do |task| %>
                  	<tr>
                  	  <td><%= task.get_project(task.id)%></td>
                  	  <td><%= task.description %></td>
                  	  <td><%= task.assigned_user%></td>
                  	  <td><%= task.created_at.to_date%></td>
                  	  <td><%= task.completed_date %></td>
                  	  <td><%= task.get_total_timestamp(task.id)%></td>
                    </tr>
                  	<% end %>
                </tbody>
              </table>
            </div>
            <footer class="row">
   		<%= render "shared/report_footer"%>
            </footer>
            </div>
          </section>
   		<!-- Table ends -->
   		<%end%>
        </div>
</div>
</section>
</section>
