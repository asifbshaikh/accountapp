<table class="table table-striped b-t text-small">
    <tr>
      <td colspan=10 align=center>
      <% if @user_id.blank? %>
        <strong>Timesheet Report For All Employees</strong><br/>
        <% else %>
        <strong>Timesheet Report For Employee : <%= User.find(@user_id).full_name%></strong><br/>
        <% end %>
      </td>
      <tr>
      <td colspan=10 align=center>
        <strong>For Period : <b><%= @start_date%> - <%= @end_date.to_date%></strong>
      </td>
      </tr>
    </tr>
        <thead>
				    <tr>
				      <th>Project</th>
					  <th>Task</th>
					  <th>Assign To</th>
					  <th>Assign Date</th>
					  <th>Completed Date</th>
					  <th>Time (Hrs.)</th>
				    </tr>
				</thead>
        <tbody>
          <% @tasks.each do |task| %>
          <tr>
            <td><%= task.get_project(task.id)%></td>
            <td><%= task.description %></td>
            <td><%= task.assigned_user%></td>
            <td><%= task.created_at.to_date%></td>
            <td><%= task.completed_date %></td>
            <td><%= task.get_total_timestamp(task.id)%></td>
          </tr>
          <% end %>
      </tbody>
</table>