<div class="panel panel-info data-filter" id="filter">
<div class="panel-heading"><h4 class="panel-title" > Filter</h4></div>
<form action = '' class="form-horizontal" method="get" data-validate="parsley">
<div class="row">
<div class="form-group"><br/>
<div class="col-lg-1"></div>
     
      <div class="col-lg-2">
            <select id ="name", name="name" style="width:180px;">
        <option value=''>Select Employee</option>
        <% @users.each do |u| %>
            <option value=<%= u.id%>><%= u.full_name %></option>
            <% end %>
        </select>
      </div>
      <div class="col-lg-2">
            <%= text_field_tag :start_date, params[:start_date],  :placeholder => "Assigned Start date", :size => '6',:class=>"form-control parsley-validated" %>
      </div>
      <div class="col-lg-2">
            <%= text_field_tag :end_date, params[:end_date],  :placeholder => "Assigned End date", :size => '6',:class=>"form-control parsley-validated" %>
      </div>

      <div class="col-lg-2">
           <input type="submit" value="Search" class="btn btn-success"/>
       </div>
</div>
</div>
</form>
</div>
<script type="text/javascript">
  $('#name').select2();
</script>
