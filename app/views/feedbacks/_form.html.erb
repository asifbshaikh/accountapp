 
<%= form_for(@feedback) do |f| %>
 <div class="field"> 
  <%= render "shared/form_error", :object => @feedback %>
  <div id='user_info_div'><span class='basic_info'><%= f.label :vote, "How would you rate your experience?:" %></span></div>&nbsp;
            <%= f.radio_button :vote,'Feedback', :checked => true %>
            <%= f.label :vote, "Feedback", :value => "Feedback" %>
           <!-- <%= f.radio_button :vote,'Report a Problem'%>
            <%= f.label :vote, "Report a Problem", :value => "Report a Problem" %>-->
