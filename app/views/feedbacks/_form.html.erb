            <%= f.label :vote, "Ask a Query", :value => "Ask a Query" %>
            <%= f.radio_button :vote,'Suggest New Feature' %>
            <%= f.label :vote, "Suggest New Feature", :value => "Suggest New Feature" %>
  </div>  &nbsp;
  <div class="field">
   <div id="user_info_div"><span class='basic_info'><%= f.label :comment %><br /></span></div>
    <%= f.text_area :comment, :rows => 8, :cols=> 80 %>
  </div><br />
  <div class="actions">
  	   <%= f.submit 'Submit',:onclick => "alert('Your Support sent successfully');",  :class => "btn btn-green btn-save "%>&nbsp;
          <a href="Cancel" class="nyroModalClose btn btn btn-cancel">Cancel</a>
   </div>
<% end %>
