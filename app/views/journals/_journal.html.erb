  <tr>
    <td><%= link_to journal.voucher_number, journal %></td>
    <td><%= journal.date.strftime("%d-%m-%Y") %></td>
    <td><%= truncate(journal.to_account_name, :length =>20) %></td>
    <td><%= format_currency journal.amount %></td>
    <td><%= journal.created_by_user %></td>
    <td>
    <div class="btn-group" style="float: right;">
          <button class="btn btn-white btn-sm" onclick="location.href='/journals/<%= journal.id %>'"; >View</button>
          <button class="btn btn-white dropdown-toggle btn-sm" data-toggle="dropdown">
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu pull-right">
            <li><a href="<%= edit_journal_path(journal) %>">Edit</a></li>
            <li><a href="<%= journal_path(journal, :format => "pdf") %>" target = "_blank">Export to PDF</a></li>
             <li class="divider"></li>
            <li><a rel="nofollow" data-method="delete" data-confirm="Are you sure?" href= "/journals/<%= journal.id%>" >Delete</a></li>
          </ul>
      </div>
    </td>
</tr>
