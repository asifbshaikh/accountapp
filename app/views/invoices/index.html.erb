  <section id="content">
    <section class="main padder">
      <div class="row">
        <div class="col-lg-3">
          <h2><i class="icon-file text"></i>Invoices</h2>
        </div>
        <div class="col-lg-9 m-t-large" align="right" >
            <div class="btn-group" >
              <button class="btn btn-success btn-lg"  onclick="location.href= '<%= new_invoice_path %>'";><strong>+</strong> New Invoice</button>
              <button class="btn btn-success btn-lg dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></button>
              <ul class="dropdown-menu text-left" align="left">
                <li><%= link_to 'Credit Invoice', new_invoice_path %></li>
                <li><%= link_to 'Cash Invoice', new_invoice_path(:cash_invoice => true) %></li>
                <!-- <li><%= link_to 'Time-based Invoice', new_invoice_path(:time_invoice => true) %></li> -->
              </ul>
            </div>
           <a href="#" class="btn btn-white btn-lg " id="use_filter" title='Filter'><i class="icon-filter"></i></a>
        </div>

      </div>

      <div class="row">
        <div class="col-lg-12"><p></p>
          <section class="panel">
            <header class="panel-heading text-right">
              <ul class="nav nav-tabs pull-left"  id="invoiceTabs">
                <li class='active'>
                  <a data-toggle="tab" href="#all-invoices-tab">
                    All Invoices
                  </a>
                </li>
                <li class=''>
                  <a data-toggle="tab" href="#draft-invoices-tab">
                    Draft Invoices
                  </a>
                </li>
               <li>
                <li class=''>
                  <a data-toggle="tab" href="#return-invoices-tab">
                    Sales Return
                  </a>
                </li>
               <li>
              </ul>
            </header>
            <div class="panel-body">
              <div class="tab-content">
                <%= render :partial=> "shared/flash_msg"%>
                <div id='all-invoices-tab' class='tab-pane fade active in'>
                  <%= render :partial=> "filter" %>
                  <div class="table-responsive row">
                    <table id="invoices" class="table table-striped m-b-none text-small" data-source="<%= invoices_url(:format => 'json') %>" >
                      <thead>
                        <%= render :partial=> "header" %>
                      </thead>
                      <tbody>
                      </tbody>
                      <tfoot>
                        <%= render :partial => "footer" %>
                      </tfoot>
                    </table>
                  </div>
                </div>
                <div id='draft-invoices-tab' class='tab-pane fade'>
                  <div class="table-responsive row">
                    <table id="draft-invoices" class="table table-striped m-b-none text-small" data-source="<%= invoices_url(:format => 'json', :invoice_status_id=>"1") %>" >
                      <thead>
                        <%= render :partial=> "header" %>
                      </thead>
                      <tbody>
                      </tbody>
                      <tfoot>
                        <%= render :partial => "footer" %>
                      </tfoot>
                    </table>
                  </div>
                </div>
                <div id="return-invoices-tab" class="tab-pane fade">
                  <table id="return-invoices" class="table table-striped m-b-none text-small" data-source="<%= invoice_returns_url(:format => 'json') %>" >
                  <thead>
                    <%= render "invoice_returns/header" %>
                  </thead>
                  <tbody>
                  </tbody>
                  <tfoot>
                    <%= render "invoice_returns/footer"%>
                  </tfoot>
                  </table>
                </div>
              </div>
            </div>
          </section>
        </div>
      </div>
   </section>
  </section>


