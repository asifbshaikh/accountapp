<script>
  $(document).ready(function(){
    '<% 
    @data = []
     for invoice in @invoices
        @data<<invoice.invoice_number
      @data<<invoice.due_date
      @data<<invoice.amount
      @data<<invoice.account.name
     end
     %>'
    data = '<%= @data.join(',')%>'.split(',');
    $("input#autocomplete").autocomplete({
      source: data
  });
  });
</script>
