    <%= f.text_field :invoice_number_or_due_date_or_invoice_line_items_amount_or_account_name_equals, :id=>"autocomplete", :placeholder => "search" %>
    <%end%>
  </div>
</div>
<!-- Page content -->
<div id="page">
  <!-- Wrapper -->
  <div class="wrapper">
    <%= render "shared/flash_msg" %> <!-- Left column/section -->
