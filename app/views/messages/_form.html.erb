<%= form_for @message,:html=>{:class=>"form-horizontal"} do |f| %>
<%= render 'shared/form_error', :object => @message %>

  <div class="form-group">
  <div class="col-lg-12">
    <label class="control-label ">Send to</label>
      <%= collection_select(:message, :user_id, @company.users, :id, :full_name,{},{:class=>"bg-focus form-control"} 
       ) %>
    </div>
  </div>
   <div class="form-group">
  <div class="col-sm-12">
    <label class="control-label-required">Subject </label>
        <%= f.text_field :subject, :class => "bg-focus form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">
        <label class="control-label ">Message </label>
        <%= f.text_area :description, :rows=>5,:class =>"bg-focus form-control",:placeholder=>"Add description", :maxlength=>"150" %>
    </div>
    </div>
      <div class="form-group">
        <p></p>
      <div class="col-lg-9 col-lg-offset-3">        
        <button type="submit" class="btn btn-success">Send Message</button>    
      </div>
    </div>
<% end %>   	