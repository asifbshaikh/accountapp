
  <section id="content" class="content">
   <div class="col-lg-12">
        <h3><i class="icon-envelope-alt text"></i>Send or Receive Messages</h3>
    
  </div>
    <!-- .main -->
    <section class="col-lg-8">
       
       <section class="panel">
       <%= render :partial=>"shared/flash_msg"%>
            <header class="panel-heading">
              <ul class="nav nav-tabs pull-left">
                <li class="active"><a href="#recmsg" data-toggle="tab"><i class="icon-inbox icon-large text-default"></i> &nbsp;Inbox</a></li>
                <li><a href="#sndmsg" data-toggle="tab"><i class="icon-time icon-external-link text-default"></i> &nbsp;Sent Messages</a></li>
              </ul>
            </header>
            <div class="panel-body">
              <div class="tab-content">              
                <div class="tab-pane active" id="recmsg">
              <div class="table-responsive row">
              <table id="messages" class="table table-striped m-b-none text-small" data-source ="<%= messages_url(:format => "json") %>" >
                <thead>
                  <%= render :partial=>"header"%>
                </thead>
                <tbody>
                  
                </tbody>
                  <tfoot>
                    <%= render :partial => "footer" %> 
                  </tfoot>
              </table>
            </div>
          </div><!--"all projects" tab ends -->
         <div class="tab-pane" id="sndmsg">
         <div class="table-responsive row">
              <table id="sent_messages" class="table table-striped m-b-none text-small" data-source ="<%= messages_url(:format => "json", :sent=>1) %>" >
                <thead>
                 
                     <tr>
                       <th>Subject</th>
                       <th>Message</th>
                       <th>Sent On</th>
                       <th>Message to</th>
                       <th>Action</th>
                   </tr>
                 
                </thead>
                <tbody>
                  
                </tbody>
                  <tfoot>
                    <tr style="visibility:hidden">
                       <th>Subject</th>
                       <th>Message</th>
                       <th>Sent On</th>
                       <th>Message to</th>
                       <th>Action</th>
                   </tr>
                  </tfoot>
              </table>
            
            </div>
            </div>
      </div>
            
            
          </section>
      
    </section>
    <!-- /.main -->
    <!-- .sidebar -->
    <section class="col-lg-4">
       <section class="panel">
            <header class="panel-heading">
              <i class="icon-edit icon-large text-default"></i> &nbsp;New Message
            </header>
            <div class="panel-body">
              <%= render :partial=>"form"%>
            </div>
          </section>
    </section>
    <!-- /.sidebar -->
  </section>