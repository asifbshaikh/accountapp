       <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
    </div>
   </div> 
   </div>   
   </div>
  <!-- blog post end -->
  </div>
  <div class="four columns">         
    <aside>
    <h5>Categories</h5>
    <ul class="sidebar-list">
    <%= render :partial => 'category', :collection => @categories %>
    </ul>
    </aside>
  </div>
</div>
</section>  
     
      </div>
