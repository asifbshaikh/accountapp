<body>
  <div id="main-wrapper">
  <!-- header start here -->
    <%= render :partial=>"home/header"%>
  <!-- header end here -->
    <!-- page title start here -->
    <section id="special-content-wrapper">
      <div class="row pagetitle">
            <div class="twelve columns">
               <h2>Profitbooks Blog</h2>
            <h6>The place where we talk about our product, design, accounting practices and sometimes about ourselves.</h6>     
            </div>
        </div>
    </section>
<section id="content-wrapper"> 
<div class="row">
  <div class="eight columns">
  <!-- blog post -->
   <div class="blog-post">
   <div class="row">                    
   <div class="twelve columns">
    <div class="post-content">
      <span itemprop="name">
       <h1>
        <a href="single-right-sidebar.html"><%= @blog_post.title %></a>
       </h1> 
      </span>
      <ul class="post-info">
        Posted by <a href="https://plus.google.com/<%= @blog_post.get_gplus_add%>?rel=author"><span itemprop="author" itemscope itemtype="http://schema.org/Person"><span itemprop="name"><%= @blog_post.author%></span></span></a> on <span itemprop="datePublished" content="<%= @blog_post.created_at.strftime("%F")%>"><%= @blog_post.created_at.strftime("%e %B, %Y") %> In : <span itemprop="articleSection"><%= link_to @blog_post.category, blog_category_blog_posts_url(@blog_post.blog_category_id)%></span>
        </li>                                                               
      </ul>           
        <p><span itemprop="articleBody"><%= raw(@blog_post.content) %></span></p>
        <div class='shareaholic-canvas' data-app='share_buttons' data-app-id='329993'></div><br/>
        <div id="disqus_thread"></div>
      <script type="text/javascript">
      /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
      var disqus_shortname = 'profitbooks'; // required: replace example with your forum shortname

      /* * * DON'T EDIT BELOW THIS LINE * * */
      (function() {
      var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
      dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
      (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
      })();
      </script>
